<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.wuxiantao.wxt.ui.custom.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_400"
                android:src="@mipmap/invite_friend_bg"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:id="@+id/invite_friend_login_title_layout"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/dp_20"
                android:layout_height="@dimen/dp_50">
                <RelativeLayout
                    android:id="@+id/invite_friend_login_back"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_15"
                        android:src="@mipmap/base_title_back"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/invite_friend_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/invite_friend_login_title_layout"
                android:layout_marginLeft="@dimen/dp_60"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/invite_friend_login_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/good_friend_login"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/invite_friend_login_super_man_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/invite_friend_login_text"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_90"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_17"
                        android:textColor="#171717"
                        android:text="@string/my_invitation_reward"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/invite_friend_login_head_img"
                            android:layout_width="@dimen/dp_43"
                            android:layout_height="@dimen/dp_43"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:src="@mipmap/coin_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_15"
                                    android:textColor="#000000"
                                    android:text="@string/cumulative_deposit"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="#000000"
                                    android:text="@string/dao"/>
                                <TextView
                                    android:id="@+id/invite_friend_login_total_deposit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_24"
                                    android:text="@string/zero"
                                    android:textColor="#282828"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/dp_135"
                    android:layout_height="@dimen/dp_187"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/invite_friend_super_man_img"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/invite_friend_login_deposit_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/invite_friend_login_super_man_layout"
                android:overScrollMode="never"
                android:layout_marginStart="@dimen/dp_10" />
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/invite_friend_login_share"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@id/invite_friend_login_deposit_rv"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:padding="0dp"
                app:normalTextColor="@color/white"
                app:normalBackgroundColor="#FF5D5B"
                app:round="true"
                android:text="@string/share_invite_more_friend"/>
            <android.support.v7.widget.CardView
                android:id="@+id/invite_friend_login_card_view"
                android:layout_width="@dimen/dp_337"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@id/invite_friend_login_share"
                app:cardElevation="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="#FAF6F5">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:textColor="#000000"
                            android:layout_centerInParent="true"
                            android:text="@string/leaderboard_today"/>
                    </RelativeLayout>
                    <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                        android:id="@+id/invite_friend_login_ranking_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/invite_friend_login_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_below="@id/invite_friend_login_card_view"
                android:text="@string/activi_description"
                android:layout_marginStart="@dimen/dp_10" />
            <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                android:id="@+id/invite_friend_login_description_rv"
                android:layout_width="@dimen/dp_337"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/invite_friend_login_description_tv"
                android:overScrollMode="never"/>
        </RelativeLayout>
    </com.wuxiantao.wxt.ui.custom.scrollview.ReboundScrollView>

</LinearLayout>