<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_302"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_background"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="@string/red_envelope_income"
            android:layout_marginTop="@dimen/dp_15"/>

        <TextView
            android:layout_width="@dimen/dp_234"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="@string/red_envelope_income_msg"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginTop="@dimen/dp_15"/>


        <LinearLayout
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_63"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/red_description_background"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:src="@mipmap/gold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#A3A3A3"
                android:text="@string/_200"
                android:layout_marginLeft="@dimen/dp_10"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginStart="@dimen/dp_10" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_63"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:background="@drawable/red_description_background"
            android:paddingStart="@dimen/dp_10"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:src="@mipmap/ads_video"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#A3A3A3"
                android:text="@string/_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginStart="@dimen/dp_10" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_63"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:background="@drawable/red_description_background"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:src="@mipmap/open_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#A3A3A3"
                android:text="@string/_0_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginStart="@dimen/dp_10" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_63"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_10"
            android:paddingRight="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:background="@drawable/red_description_background"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:src="@mipmap/buy_goods"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#A3A3A3"
                android:text="@string/lottery_ticket_msg"
                android:layout_marginLeft="@dimen/dp_10"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginStart="@dimen/dp_10" />
        </LinearLayout>

        <com.wuxiantao.wxt.ui.custom.button.StateButton
            android:id="@+id/popup_red_envelope_know"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:padding="0dp"
            android:layout_gravity="center_horizontal"
            app:normalTextColor="@color/white"
            app:normalBackgroundStartColor="#FF8777"
            app:normalBackgroundCenterColor="#FF8777"
            app:normalBackgroundEndColor="#FB5654"
            app:normalOrientation="BL_TR"
            app:normalShapeType="LINEAR_GRADIENT"
            android:textSize="@dimen/sp_15"
            app:round="true"
            android:text="@string/i_know"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>
</RelativeLayout>