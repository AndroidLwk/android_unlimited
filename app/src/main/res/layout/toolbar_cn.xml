<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/base_title_background"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:minHeight="@dimen/dp_40"
    android:paddingTop="@dimen/dp_20"
    android:id="@+id/toolbar_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15">
        <ImageView
            android:id="@+id/toolbar_left_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"
            android:src="@mipmap/base_title_back"
            android:layout_marginStart="@dimen/dp_10" />

        <TextView
            android:id="@+id/toolbar_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_10" />

        <ImageView
            android:id="@+id/toolbar_right_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15" />

        <TextView
            android:id="@+id/toolbar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/dp_15"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>