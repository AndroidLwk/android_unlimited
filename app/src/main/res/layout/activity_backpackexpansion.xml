<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wuxiantao.wxt.ui.title.CNToolbar
        android:id="@+id/cntoolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cn_leftImage="@mipmap/base_title_back"
        app:cn_titleText="@string/pointtocard_text19" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="什么是背包扩容?"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="由于我的背包容量有限，存放的物品有限，因此需要进行
背包扩容，背包扩容后我的背包就可以存放更多的物品。
每个格子0.1元，每次扩容至少扩容10个格子！"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16" />

    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/statebutton_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_218"
        android:layout_marginRight="@dimen/dp_30"
        android:text="@string/pointtocard_text20"
        android:textSize="@dimen/sp_16"
        app:normalBackgroundCenterColor="#FF8777"
        app:normalBackgroundEndColor="#FB5654"
        app:normalBackgroundStartColor="#FF8777"
        app:normalOrientation="BL_TR"
        app:normalShapeType="LINEAR_GRADIENT"
        app:normalTextColor="@color/white"
        app:round="true" />
</LinearLayout>