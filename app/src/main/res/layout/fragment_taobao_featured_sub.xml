<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/fragment_tao_bao_featured_sub_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000"
        android:background="@color/white">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/fragment_tao_bao_featured_sub_classic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/black"
            app:srlPrimaryColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly"
            app:layout_srlSpinnerStyle="Scale"/>
        <android.support.v4.widget.DrawerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_tao_bao_featured_sub_dl">
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0dp"
                    android:fitsSystemWindows="true">
                    <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioGroup
                        android:id="@+id/fragment_tao_bao_featured_sub__rb"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="@dimen/dp_45">
                        <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioButton
                            android:id="@+id/fragment_tao_bao_featured_sub_comprehensive_rb"
                            style="@style/search_softRadioButton_style"
                            app:text="@string/search_comprehensive"/>
                        <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioButton
                            android:id="@+id/fragment_tao_bao_featured_sub_volume_rb"
                            style="@style/softRadioButton_style"
                            app:text="@string/search_sales_volume"/>
                        <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioButton
                            android:id="@+id/fragment_tao_bao_featured_sub_coupon_rb"
                            style="@style/softRadioButton_style"
                            app:text="@string/search_coupon_price"/>
                        <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioButton
                            android:id="@+id/fragment_tao_bao_featured_sub_filter_rb"
                            style="@style/search_softRadioButton_style"
                            app:text="@string/search_filter"
                            app:rightImgCheck="@mipmap/filter_icon"
                            app:rightImgChecked="@mipmap/filter_icon_checked"/>
                    </com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioGroup>
                </android.support.design.widget.AppBarLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_tao_bao_featured_sub_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:overScrollMode="never"/>
            </android.support.design.widget.CoordinatorLayout>
            <RelativeLayout
                android:id="@+id/fragment_tao_bao_featured_sub_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:layout_gravity="right"
                android:focusable="true"
                tools:ignore="RtlHardcoded">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:text="@string/choose_business"/>
                    <RadioGroup
                        android:id="@+id/fragment_tao_bao_featured_sub_right_rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/fragment_tao_bao_featured_sub_right_tianmao"
                            android:layout_width="@dimen/dp_86"
                            android:layout_height="@dimen/dp_30"
                            android:button="@null"
                            android:text="@string/tianmao"
                            android:textColor="@drawable/rb_text_selector"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="@dimen/sp_14"
                            android:background="@drawable/rb_selector"/>
                        <RadioButton
                            android:id="@+id/fragment_tao_bao_featured_sub_unlimited"
                            android:layout_width="@dimen/dp_86"
                            android:layout_height="@dimen/dp_30"
                            android:button="@null"
                            android:text="@string/unlimited"
                            android:textColor="@drawable/rb_text_selector"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="@dimen/sp_14"
                            android:checked="true"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:background="@drawable/rb_selector"/>
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/dp_70"
                        android:text="@string/price_range"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/fragment_tao_bao_featured_sub_input_lowest"
                            android:layout_width="@dimen/dp_109"
                            android:layout_height="@dimen/dp_30"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:hint="@string/lowest_price"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/sp_13"
                            android:background="@drawable/price_input_selector"/>
                        <View
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_2"
                            android:background="@color/gray"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"/>

                        <EditText
                            android:id="@+id/fragment_tao_bao_featured_sub_input_highest"
                            android:layout_width="@dimen/dp_109"
                            android:layout_height="@dimen/dp_30"
                            android:textCursorDrawable="@drawable/text_cursor"
                            android:hint="@string/highest_price"
                            android:inputType="numberDecimal"
                            android:textSize="@dimen/sp_13"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/price_input_selector"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10">
                    <com.wuxiantao.wxt.ui.custom.button.StateButton
                        android:id="@+id/fragment_tao_bao_featured_sub_right_reset"
                        android:layout_width="@dimen/dp_111"
                        android:layout_height="@dimen/dp_49"
                        android:padding="0dp"
                        android:text="@string/reset"
                        app:round="true"
                        app:normalTextColor="#9D9D9D"
                        app:normalBackgroundColor="#CFCFCF"
                        android:textSize="@dimen/sp_15"/>
                    <com.wuxiantao.wxt.ui.custom.button.StateButton
                        android:id="@+id/fragment_tao_bao_featured_sub_right_confirm"
                        android:layout_width="@dimen/dp_111"
                        android:layout_height="@dimen/dp_49"
                        android:padding="0dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/confirm"
                        app:round="true"
                        app:normalTextColor="@color/white"
                        app:normalBackgroundColor="#FF5555"
                        android:textSize="@dimen/sp_15"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v4.widget.DrawerLayout>


        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>




</LinearLayout>