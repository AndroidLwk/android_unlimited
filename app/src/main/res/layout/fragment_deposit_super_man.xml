<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/deposit_super_man_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/deposit_super_man_classic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_srlSpinnerStyle="Scale"
            app:srlAccentColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly_white" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:elevation="@dimen/dp_0">

                <RelativeLayout
                    android:id="@+id/fragment_deposit_friends_head_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_400">

                        <com.wuxiantao.wxt.ui.custom.imageview.ResizableImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_400"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/deposit_red_pag_bg_icon" />

                        <TextView
                            android:id="@+id/fragment_deposit_friends_bulletin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:paddingTop="@dimen/dp_30"
                            android:text="@string/invitation_leaderboard"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/fragment_deposit_friends_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_30"
                            android:text="@string/help"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/fragment_deposit_friends_bg_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fragment_deposit_friends_bulletin"
                            android:layout_marginStart="@dimen/dp_40"
                            android:layout_marginLeft="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="@string/red_bg"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:id="@+id/fragment_deposit_friends_count_down_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fragment_deposit_friends_bg_tv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_2"
                            android:textColor="@color/white"
                            android:visibility="visible"
                            android:textSize="@dimen/sp_20" />

                        <ImageView
                            android:id="@+id/fragment_deposit_friends_thousandth_img"
                            android:layout_width="@dimen/dp_149"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_2"
                            android:visibility="gone"
                            android:scaleType="centerCrop"
                            android:layout_below="@id/fragment_deposit_friends_bg_tv"
                            android:src="@mipmap/thousandth"/>
                        <ImageView
                            android:id="@+id/fragment_deposit_friends_bag_open_img"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_75"
                            android:layout_below="@id/fragment_deposit_friends_bg_tv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_50" />

                        <TextView
                            android:id="@+id/deposit_red_bag_my_money_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_red_pag_balance"
                            android:textColor="#CCBEBE"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/fragment_deposit_friends_bag_open_img"
                            android:textSize="@dimen/sp_15" />

                        <LinearLayout
                            android:id="@+id/fragment_deposit_friends_bag_money_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/deposit_red_bag_my_money_tv"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dao"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/sp_20" />

                            <TextView
                                android:id="@+id/fragment_deposit_friends_bag_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/sp_30" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fragment_deposit_friends_cv"
                        android:layout_width="@dimen/dp_340"
                        android:background="@drawable/bg_white_radius_selector"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_360"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_height="@dimen/dp_80">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/dp_20">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#2D2D2D"
                                android:textSize="@dimen/sp_13"
                                android:text="@string/can_withdraw"/>

                            <TextView
                                android:id="@+id/fragment_deposit_gold_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rmb"
                                android:maxLines="1"
                                android:maxWidth="@dimen/dp_220"
                                android:ellipsize="end"
                                android:textColor="#2D2D2D"
                                android:textSize="@dimen/sp_25" />
                        </LinearLayout>

                        <com.wuxiantao.wxt.ui.custom.button.StateButton
                            android:id="@+id/fragment_deposit_lottery"
                            android:layout_width="@dimen/dp_74"
                            android:layout_height="@dimen/dp_35"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_15"
                            android:padding="0dp"
                            android:text="@string/withdraw"
                            android:textSize="@dimen/sp_15"
                            app:normalBackgroundCenterColor="#FF5655"
                            app:normalBackgroundEndColor="#FF5655"
                            app:normalBackgroundStartColor="#FB8E7D"
                            app:normalOrientation="BL_TR"
                            app:normalShapeType="LINEAR_GRADIENT"
                            app:normalTextColor="@color/white"
                            app:round="true"
                            app:unableBackgroundCenterColor="#FB8E7D"
                            app:unableBackgroundEndColor="#FB8E7D"
                            app:unableBackgroundStartColor="#FB8E7D"
                            app:unableTextColor="@color/white"
                            android:layout_marginEnd="@dimen/dp_15" />
                    </RelativeLayout>
                </RelativeLayout>

            </android.support.design.widget.AppBarLayout>

            <com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="@dimen/dp_334"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_white_radius_selector">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/dp_15">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/fragment_deposit_super_man_shantou_icon"
                                            android:layout_width="@dimen/dp_17"
                                            android:layout_height="@dimen/dp_22"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/shantou_icon" />

                                        <TextView
                                            android:id="@+id/fragment_deposit_super_man_gold_status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/dp_3"
                                            android:text="@string/gold_wait_make"
                                            android:textColor="#3F3F3F"
                                            android:textSize="@dimen/sp_13"
                                            android:layout_marginStart="@dimen/dp_3" />

                                        <TextView
                                            android:id="@+id/fragment_deposit_super_man_vip"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp_1"
                                            android:text="@string/_36000"
                                            android:textColor="#FF5857"
                                            android:textSize="@dimen/sp_11"
                                            android:visibility="gone"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="@dimen/dp_1" />
                                    </LinearLayout>

                                    <ProgressBar
                                        android:id="@+id/fragment_deposit_super_man_pb"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="@dimen/dp_225"
                                        android:layout_height="@dimen/dp_8"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:max="36000"
                                        android:progressDrawable="@drawable/progressbar_bg_key_create" />
                                </LinearLayout>

                                <com.wuxiantao.wxt.ui.custom.button.StateButton
                                    android:id="@+id/fragment_deposit_super_man_make"
                                    android:layout_width="@dimen/dp_74"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:padding="0dp"
                                    android:text="@string/click_make"
                                    android:textSize="@dimen/sp_13"
                                    app:normalBackgroundCenterColor="#FF5655"
                                    app:normalBackgroundEndColor="#FF5655"
                                    app:normalBackgroundStartColor="#FB8E7D"
                                    app:normalOrientation="BL_TR"
                                    app:normalShapeType="LINEAR_GRADIENT"
                                    app:normalTextColor="@color/white"
                                    app:round="true"
                                    android:enabled="true"
                                    app:unableBackgroundCenterColor="#FB8E7D"
                                    app:unableBackgroundEndColor="#FB8E7D"
                                    app:unableBackgroundStartColor="#FB8E7D"
                                    app:unableTextColor="@color/white"
                                    android:layout_marginEnd="@dimen/dp_10" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10">

                                <ImageView
                                    android:id="@+id/fragment_deposit_super_man_about_key"
                                    android:layout_width="@dimen/dp_92"
                                    android:layout_height="@dimen/dp_30"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/about_lottery_ticket" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/dp_20"
                                        android:layout_height="@dimen/dp_20"
                                        android:src="@mipmap/gold"/>
                                    <TextView
                                        android:id="@+id/fragment_deposit_super_man_double"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/build_speed_"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/sp_16"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:maxWidth="@dimen/dp_100"
                                        android:layout_marginStart="@dimen/dp_5" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/fragment_deposit_super_man_invite"
                                    android:layout_width="@dimen/dp_92"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/invite_good_friend_icon"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/dp_5" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_334"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/bg_white_radius_selector"
                        android:alpha="1.0"
                        android:orientation="vertical">
                        <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                            android:id="@+id/fragment_exclusive_invited_friends_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_26"
                                    android:src="@mipmap/friends_icon"/>

                                <TextView
                                    android:id="@+id/fragment_exclusive_friends_work_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_15"
                                    android:textColor="#2D2D2D"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_1"
                                    android:text="@string/invite_add_money"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:maxWidth="@dimen/dp_190"
                                    android:layout_marginStart="@dimen/dp_1" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/fragment_exclusive_friends_query_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_15"
                                android:textColor="#FE5656"
                                android:layout_gravity="center_vertical"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="@string/query_all"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_marginEnd="@dimen/dp_15" />
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="@dimen/dp_334"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/bg_white_radius_selector">
                        <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                            android:id="@+id/deposit_super_man_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView>
        </android.support.design.widget.CoordinatorLayout>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</android.support.design.widget.CoordinatorLayout>