<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_selector">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mine_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/mine_classic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly_white"
            app:layout_srlSpinnerStyle="Scale"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.wuxiantao.wxt.ui.title.CNToolbar
                android:id="@+id/my_deposit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cn_titleText="@string/born"
                app:cn_rightText="@string/official_group"/>

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.AppBarLayout
                    android:id="@+id/fragment_mine_appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="@dimen/dp_0"
                    android:visibility="visible"
                    android:background="@drawable/base_title_background">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_scrollFlags="scroll"
                        android:layout_centerInParent="false">
                        <com.wuxiantao.wxt.ui.custom.progress.ArcProgressBar
                            android:id="@+id/fragment_mine_cp"
                            android:layout_width="@dimen/dp_220"
                            android:layout_height="@dimen/dp_190"
                            app:arc_max_progress="100"
                            app:arc_bg_color="#C0C1C2"
                            app:arc_stroke_width="@dimen/dp_3"
                            app:arc_progress="0"
                            app:arc_progress_color="@color/white"
                            app:arc_first_text="@string/make_money_today"
                            app:arc_first_text_color="@color/white"
                            app:arc_first_text_size="@dimen/sp_6"
                            app:arc_second_text="@string/zero"
                            app:arc_second_text_color="@color/white"
                            app:arc_second_text_size="@dimen/sp_12"
                            android:layout_gravity="center_horizontal" />
                        <com.wuxiantao.wxt.ui.custom.button.StateButton
                            android:id="@+id/fragment_mine_production"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_30"
                            app:round="true"
                            app:normalBackgroundStartColor="#FF8777"
                            app:normalBackgroundCenterColor="#FF8777"
                            app:normalBackgroundEndColor="#FB5654"
                            app:normalStrokeWidth="1px"
                            app:normalStrokeColor="@color/white"
                            app:normalTextColor="@color/white"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_gravity="center_horizontal"
                            app:normalOrientation="BL_TR"
                            app:normalShapeType="LINEAR_GRADIENT"
                            android:padding="0dp"
                            android:text="@string/production_of_money"/>
                        <LinearLayout
                            android:id="@+id/mine_expected_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_gravity="center_horizontal"
                            android:visibility="visible"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/current_deposit_bg">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_centerVertical="true"
                                    android:padding="@dimen/dp_5"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginStart="@dimen/dp_15"
                                    android:layout_marginEnd="@dimen/dp_20">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/mine_deposit_sum_icon"/>
                                    <TextView
                                        android:id="@+id/mine_yall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_14"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:text="@string/current_deposit"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/black"
                                        android:layout_marginStart="@dimen/dp_5" />
                                </LinearLayout>
                            </RelativeLayout>
                            <View
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/triangle_down"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fragment_mine_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_top_rectangle"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/mine_interest_rate"
                            android:layout_width="0dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="@dimen/dp_8"
                                    android:layout_height="@dimen/dp_8"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/yuan_solid_read_dot"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_15"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:textColor="@color/black"
                                    android:text="@string/rate"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/mine_aninter_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_16"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/_zero"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#FB5856"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="@dimen/dp_8"
                                    android:layout_height="@dimen/dp_8"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/yuan_solid_yellow_dot"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_15"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:textColor="@color/black"
                                    android:text="@string/current_level"
                                    android:layout_marginStart="@dimen/dp_5" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/mine_deposit_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_15"
                                android:textColor="#FB5856"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/level"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/mine_available_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                                <View
                                    android:layout_width="@dimen/dp_8"
                                    android:layout_height="@dimen/dp_8"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/yuan_solid_read_dot"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_15"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:textColor="@color/black"
                                    android:text="@string/available_balance"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_15"
                                    android:textColor="#FB5856"
                                    android:text="@string/dao"/>
                                <TextView
                                    android:id="@+id/mine_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_16"
                                    android:text="@string/zero"
                                    android:textColor="#FB5856"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.design.widget.AppBarLayout>
                <com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                        android:id="@+id/fragment_mine_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:overScrollMode="never"/>
                </com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView>

            </android.support.design.widget.CoordinatorLayout>

        </LinearLayout>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</android.support.design.widget.CoordinatorLayout>