<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:clickable="true"
    android:background="@drawable/bg_white_selector"
    android:id="@+id/item_taobao_featured_layout"
    android:focusable="true">

    <ImageView
        android:id="@+id/item_taobao_featured_img"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_110"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_5">
        <com.wuxiantao.wxt.ui.custom.textview.TaoBaoTagTextView
            android:id="@+id/item_taobao_featured_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxEms="30"
            android:textSize="@dimen/sp_14" />
        <com.wuxiantao.wxt.ui.custom.button.StateButton
            android:id="@+id/item_taobao_featured_buy_fanli"
            android:layout_below="@id/item_taobao_featured_title"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_5"
            app:radius="@dimen/dp_5"
            android:padding="0dp"
            app:unableTextColor="@color/white"
            app:unableBackgroundColor="#FF5651"
            android:enabled="false"
            android:textSize="@dimen/sp_9"/>
        <com.wuxiantao.wxt.ui.custom.button.StateButton
            android:id="@+id/item_taobao_featured_share_fanli"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@id/item_taobao_featured_buy_fanli"
            app:radius="@dimen/dp_5"
            android:padding="0dp"
            app:unableTextColor="@color/white"
            app:unableBackgroundColor="#FAAD07"
            android:enabled="false"
            android:textSize="@dimen/sp_9"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@id/item_taobao_featured_share_fanli">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="#F35550"
                    android:text="@string/dao"/>
                <TextView
                    android:id="@+id/item_taobao_featured_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#F35550"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:text="@string/zero"
                    android:layout_marginStart="@dimen/dp_1" />
                <TextView
                    android:id="@+id/item_taobao_featured_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:text="@string/commodity_price"
                    android:textSize="@dimen/sp_9"
                    android:layout_marginStart="@dimen/dp_4" />
            </LinearLayout>
            <TextView
                android:id="@+id/item_taobao_featured_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_volume"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/grey"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_15" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>