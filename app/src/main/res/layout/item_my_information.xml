<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_selector"
    android:id="@+id/item_my_information_layout"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15">
        <TextView
            android:id="@+id/item_my_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>
       <!-- <ImageView
            android:id="@+id/item_my_information_prize_icon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@mipmap/prize_icon"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_8" />-->
        <TextView
            android:id="@+id/item_my_information_prize_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_23"
            android:textColor="#FF615D"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_my_information_head_img"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_35"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/dp_35"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/item_my_information_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_35"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/grey"
        android:visibility="invisible"/>
    <com.wuxiantao.wxt.ui.custom.switchbutton.SwitchButton
        android:id="@+id/item_my_information_sb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        app:sb_checked_color="#FF5D5B"
        app:sb_checked="false"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/item_my_information_back_img"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_12"
        android:rotation="180"
        android:tint="@color/grey"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/base_title_back"/>
</RelativeLayout>