<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">

    <ImageView
        android:id="@+id/item_winning_list_icon"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_55">
        <TextView
            android:id="@+id/item_winning_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6B6B6B"
            android:textSize="@dimen/sp_12"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_120"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/item_winning_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="#C5C4C4"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_120"
            android:maxLines="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_winning_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6B6B6B"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="right"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="@dimen/dp_120"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        tools:ignore="RtlHardcoded" />

    <View
        android:id="@+id/item_winning_list_line"
        style="@style/list_line_driver"/>
</RelativeLayout>