<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_service_on_line_aftername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuan_stork_gree_dot">
            <TextView
                android:id="@+id/item_service_on_line_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/item_service_on_line_befotype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_1"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/rectangle_gree">
            <TextView
                android:id="@+id/item_service_on_line_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="@dimen/dp_170"
                android:textColor="@color/grey"/>
        </RelativeLayout>
    </LinearLayout>
    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/item_service_on_line_copy"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_22"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:text="@string/copy"
        app:normalTextColor="@color/white"
        app:normalBackgroundStartColor="#FF8777"
        app:normalBackgroundCenterColor="#FF8777"
        app:normalBackgroundEndColor="#FB5654"
        app:normalOrientation="BL_TR"
        app:normalShapeType="LINEAR_GRADIENT"
        app:radius="@dimen/dp_5"
        android:layout_alignParentEnd="true" />

</RelativeLayout>