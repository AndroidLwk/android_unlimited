<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_340"
    android:layout_height="@dimen/dp_54"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:id="@+id/item_rea_bag_friend_list_layout"
    android:clickable="true"
    android:background="@drawable/bg_white_selector"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_10">
        <ImageView
            android:id="@+id/item_rea_bag_friend_list_icon"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"/>

        <TextView
            android:id="@+id/item_rea_bag_friend_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:ellipsize="end"
            android:maxEms="4"
            android:maxLines="1"
            android:layout_marginStart="@dimen/dp_10" />
    </LinearLayout>
    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/item_rea_bag_friend_list_status"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_14"
        android:layout_gravity="center_vertical"
        android:layout_centerInParent="true"
        android:padding="0dp"
        android:text="@string/workinging"
        android:enabled="false"
        app:unableTextColor="@color/white"
        app:unableBackgroundColor="#FF5454"
        app:radius="@dimen/dp_5"
        android:textSize="@dimen/sp_9"/>
    <TextView
        android:id="@+id/item_rea_bag_friend_list_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_23"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:maxLines="1"
        android:maxEms="3"
        android:ellipsize="end"
        android:text="@string/yuan_regex"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10" />
</RelativeLayout>