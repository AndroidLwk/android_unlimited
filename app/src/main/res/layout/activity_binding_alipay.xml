<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/base_title"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/change_alipay_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/binding_alipay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_22"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/binding_alipay_account_input"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_320"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:met_maxCharacters="11"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/grey"
                app:met_primaryColor="@color/black"
                app:met_errorColor="@color/red"
                app:met_clearButton="true"
                android:inputType="number"
                android:textCursorDrawable="@drawable/text_cursor"
                android:hint="@string/input_nb"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/binding_alipay_name_input"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_320"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:met_maxCharacters="6"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/grey"
                app:met_primaryColor="@color/black"
                app:met_errorColor="@color/red"
                app:met_clearButton="true"
                android:textCursorDrawable="@drawable/text_cursor"
                android:inputType="text"
                android:hint="@string/input_name"/>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/binding_alipay_confrim_banding"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                app:round="true"
                android:padding="0dp"
                android:enabled="false"
                app:unableTextColor="@color/white"
                app:normalTextColor="@color/white"
                app:unableBackgroundStartColor="#FB8E7D"
                app:unableBackgroundCenterColor="#FB8E7D"
                app:unableBackgroundEndColor="#FB8E7D"
                app:normalBackgroundStartColor="#FF8E7C"
                app:normalBackgroundCenterColor="#FF5D5B"
                app:normalBackgroundEndColor="#FF5D5B"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                android:text="@string/confrim_bangding"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>