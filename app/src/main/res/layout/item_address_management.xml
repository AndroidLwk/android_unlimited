<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10">
        <TextView
            android:id="@+id/item_address_management_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13"
            android:maxLines="1"
            android:maxEms="6"
            android:ellipsize="end"/>
        <LinearLayout
            android:id="@+id/item_address_management_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15">
            <ImageView
                android:id="@+id/item_address_management_default_icon"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/address_select_icon"/>
            <TextView
                android:id="@+id/item_address_management_default_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/set_default_address"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/item_address_management_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="#333333"
        android:maxLines="1"
        android:maxEms="15"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"/>
    <TextView
        android:id="@+id/item_address_management_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="#333333"
        android:maxLines="1"
        android:maxEms="20"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:background="#EBEBEB"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15">
            <LinearLayout
                android:id="@+id/item_address_management_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/address_edit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:maxEms="15"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/address_edit"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_address_management_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20">
                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/address_delete"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:maxEms="15"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/address_delete"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="#EBEBEB"/>
</LinearLayout>