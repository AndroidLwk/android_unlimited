<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_background"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/base_title_top_background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10">
                <ImageView
                    android:id="@+id/popup_change_area_close"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:tint="@color/white"
                    android:src="@mipmap/close"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:text="@string/change_area"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_6"/>
            </RelativeLayout>
        </LinearLayout>

        <com.wuxiantao.wxt.ui.custom.layout.XCDropDownLayout
            android:id="@+id/popup_change_area_select"
            android:layout_width="@dimen/dp_255"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:layout_marginTop="@dimen/dp_10"
           android:layout_marginBottom="@dimen/dp_10"
           android:orientation="horizontal">
           <com.wuxiantao.wxt.ui.custom.button.StateButton
               android:id="@+id/popup_change_area_cancel"
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_35"
               app:unableBackgroundStartColor="#FB8E7D"
               app:unableBackgroundCenterColor="#FB8E7D"
               app:unableBackgroundEndColor="#FB8E7D"
               app:unableTextColor="@color/white"
               app:normalBackgroundStartColor="#FFC125"
               app:normalBackgroundCenterColor="#EEE685"
               app:normalBackgroundEndColor="#EEE685"
               app:normalOrientation="BL_TR"
               app:normalShapeType="LINEAR_GRADIENT"
               app:normalTextColor="@color/white"
               app:round="true"
               android:textSize="@dimen/sp_15"
               android:padding="0dp"
               android:text="@string/cancel"
               android:enabled="true" />
           <com.wuxiantao.wxt.ui.custom.button.StateButton
               android:id="@+id/popup_change_area_id_confirm"
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_35"
               app:unableBackgroundStartColor="#FB8E7D"
               app:unableBackgroundCenterColor="#FB8E7D"
               app:unableBackgroundEndColor="#FB8E7D"
               app:unableTextColor="@color/white"
               app:normalBackgroundStartColor="#FB8E7D"
               app:normalBackgroundCenterColor="#FB8E7D"
               app:normalBackgroundEndColor="#FF5655"
               app:normalOrientation="BL_TR"
               app:normalShapeType="LINEAR_GRADIENT"
               app:normalTextColor="@color/white"
               app:round="true"
               android:textSize="@dimen/sp_15"
               android:padding="0dp"
               android:text="@string/confirm"
               android:enabled="true"
               android:layout_marginLeft="@dimen/dp_20"
               android:layout_marginStart="@dimen/dp_20" />
       </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>
</RelativeLayout>