<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:background="@color/white">
        <ImageView
            android:id="@+id/online_service_back"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_12"
            android:tint="@color/black"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/base_title_back"
            android:layout_marginStart="@dimen/dp_15" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:text="@string/on_line"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/service_on_line_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly_white"
            app:layout_srlSpinnerStyle="Scale"/>
        <com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="@string/we_chat_number"/>
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_11"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:background="@color/black"
                        android:layout_marginStart="@dimen/dp_10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/kefu_number"/>
                </LinearLayout>
                <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                    android:id="@+id/online_service_rv"
                    android:layout_width="@dimen/dp_320"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    android:overScrollMode="never"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/work_time"/>
                <ImageView
                    android:id="@+id/online_service_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:minWidth="@dimen/dp_150"
                    android:minHeight="@dimen/dp_150"
                    android:maxHeight="@dimen/dp_220"
                    android:maxWidth="@dimen/dp_220"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>