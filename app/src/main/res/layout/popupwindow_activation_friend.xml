<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_rectangle"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30">
                <ImageView
                    android:id="@+id/popup_activation_friend_close"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@mipmap/close"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/popup_activation_friend_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxEms="8"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/activation_friend_one"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/activation_nick_name_search"/>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/popup_activation_friend_copy_nick_name"
                android:layout_width="@dimen/dp_240"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="0dp"
                app:normalTextColor="@color/white"
                app:normalBackgroundStartColor="#FF8777"
                app:normalBackgroundCenterColor="#FF8777"
                app:normalBackgroundEndColor="#FB5654"
                app:normalOrientation="BL_TR"
                android:textSize="@dimen/sp_15"
                app:normalShapeType="LINEAR_GRADIENT"
                app:round="true"
                android:text="@string/clicl_copy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/activation_friend_two"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/activation_chat_search"/>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/popup_activation_friend_copy_writing"
                android:layout_width="@dimen/dp_240"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="0dp"
                app:normalTextColor="@color/white"
                app:normalBackgroundStartColor="#FF8777"
                app:normalBackgroundCenterColor="#FF8777"
                app:normalBackgroundEndColor="#FB5654"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                android:layout_marginBottom="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                app:round="true"
                android:text="@string/click_copy_writing"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/popup_activation_friend_head_img"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>
</RelativeLayout>