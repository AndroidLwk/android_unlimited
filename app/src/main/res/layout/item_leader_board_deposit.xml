<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:clickable="true"
    android:id="@+id/item_leader_board_deposit_layout"
    android:background="@drawable/bg_white_selector">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/leader_board_deposit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10">
            <ImageView
                android:id="@+id/leader_board_deposit_icon"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/dp_6"/>
            <ImageView
                android:id="@+id/leader_board_deposit_hat"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_11"
                android:visibility="gone"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/leader_board_deposit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="8"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_8"
            android:text="@string/dao"/>
        <TextView
            android:id="@+id/leader_board_deposit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_3"/>
    </LinearLayout>
</RelativeLayout>