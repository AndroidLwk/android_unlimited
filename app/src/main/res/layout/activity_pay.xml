<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:background="@drawable/base_title_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bimg_pay_back"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/base_title_back"
                android:padding="@dimen/dp_15"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_18"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="@string/balance_my_top_up"/>
            <View
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"></View>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_faf6f5"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="vertical"
            android:background="@drawable/bg_white_cercle_5dp"
            android:layout_height="@dimen/dp_110">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/balance_my_top_up_num"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_17"
                android:layout_height="@dimen/dp_40">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/balance_my_top_u"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_19"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_height="match_parent">
                </TextView>
                <EditText
                    android:id="@+id/et_pay_sum"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:layout_height="match_parent">

                </EditText>
                <ImageView
                    android:id="@+id/bimg_pay_sum"
                    android:layout_width="@dimen/dp_30"
                    android:paddingLeft="@dimen/dp_5"
                    android:src="@drawable/clear_all"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="match_parent">

                </ImageView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/balance_my_jianyi"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pay_check_wx"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_white_cercle_5dp"
            android:layout_height="@dimen/dp_50">
            <ImageView
                android:id="@+id/img_pay_check_wx"
                android:layout_width="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/scrapcard_popwindow_b"
                android:layout_height="match_parent"></ImageView>
            <ImageView
                android:layout_width="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/wchat_cz"
                android:layout_height="match_parent"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/balance_my_wx"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pay_check_zfb"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_white_cercle_5dp"
            android:layout_height="@dimen/dp_50">
            <ImageView
                android:id="@+id/bimg_pay_check_zfb"
                android:layout_width="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/scrapcard_popwindow_a"
                android:layout_height="match_parent"></ImageView>
            <ImageView
                android:id="@+id/img_pay_check_zfb"
                android:layout_width="@dimen/dp_28"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/zfb_cz"
                android:layout_height="match_parent"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/balance_my_zfb"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bll_pay_affirm"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_65"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            android:background="@drawable/base_title_background_cercle_25dp"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/balance_my_affirm"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:layout_height="match_parent">
            </TextView>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:src="@mipmap/check_cz"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_height="match_parent">

            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>