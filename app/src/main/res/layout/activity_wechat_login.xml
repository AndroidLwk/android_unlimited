<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/wechat_login_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/wechat_login_img"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_155"
                android:background="@drawable/superman_app_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical">
                <com.wuxiantao.wxt.ui.custom.button.StateButton
                    android:id="@+id/wechat_login"
                    android:layout_width="@dimen/dp_320"
                    android:layout_height="@dimen/dp_40"
                    app:unableBackgroundStartColor="#FB8E7D"
                    app:unableBackgroundCenterColor="#FB8E7D"
                    app:unableBackgroundEndColor="#FB8E7D"
                    app:unableTextColor="@color/white"
                    app:normalBackgroundStartColor="#FB8E7D"
                    app:normalBackgroundCenterColor="#FB8E7D"
                    app:normalBackgroundEndColor="#FF5655"
                    app:normalOrientation="BL_TR"
                    app:normalShapeType="LINEAR_GRADIENT"
                    app:normalTextColor="@color/white"
                    app:round="true"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@mipmap/wechat_login_icon"
                    android:paddingStart="@dimen/dp_100"
                    android:paddingEnd="@dimen/dp_100"
                    android:text="@string/wechat_login"
                    android:textSize="@dimen/sp_15"
                    android:padding="0dp"
                    android:drawableStart="@mipmap/wechat_login_icon" />
                <TextView
                    android:id="@+id/wechat_login_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/grey"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/other_login_type"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/grey"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/login_agree"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/wechat_login_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#2F9ECD"
                        android:text="@string/service_terms"/>

                    <TextView
                        android:id="@+id/wechat_login_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#2F9ECD"
                        android:text="@string/privacy_statement"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</RelativeLayout>