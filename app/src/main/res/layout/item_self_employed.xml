<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@drawable/bg_white_selector"
    android:layout_height="wrap_content"
    android:id="@+id/item_self_employed_layout"
    android:focusable="true">

    <ImageView
        android:id="@+id/item_self_employed_icon"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_5">
        <com.wuxiantao.wxt.ui.custom.textview.TaoBaoTagTextView
            android:id="@+id/item_self_employed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxEms="30"
            android:textSize="@dimen/sp_13" />
        <ImageView
            android:layout_width="@dimen/dp_109"
            android:layout_height="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:layout_below="@id/item_self_employed_title"
            android:src="@mipmap/self_employed_icon"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="#F35550"
                        android:text="@string/dao"/>
                    <TextView
                        android:id="@+id/item_self_employed_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_21"
                        android:textColor="#F35550"
                        android:layout_marginLeft="@dimen/dp_1"
                        android:text="@string/zero"
                        android:layout_marginStart="@dimen/dp_1" />
                </LinearLayout>
                <TextView
                    android:id="@+id/item_self_employed_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:visibility="visible"
                    android:text="@string/self_buy_after"/>
            </LinearLayout>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/item_self_employed_grab"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_30"
                app:round="true"
                android:padding="0dp"
                app:normalBackgroundStartColor="#FF8777"
                app:normalBackgroundCenterColor="#FF8777"
                app:normalBackgroundEndColor="#FB5654"
                app:normalTextColor="@color/white"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                android:enabled="true"
                android:textSize="@dimen/sp_15"
                android:text="@string/grab_immediately"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>