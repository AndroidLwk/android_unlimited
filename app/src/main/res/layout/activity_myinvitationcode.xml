<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/base_title_background"
        android:paddingTop="@dimen/dp_30">

        <RelativeLayout
            android:id="@+id/mine_fansi_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_13"
                android:layout_centerInParent="true"
                android:background="@mipmap/base_title_back" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15">

            <ImageView
                android:id="@+id/mine_fansi_title_img"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mine_fansi_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:ellipsize="end"
                android:maxEms="6"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:text="@string/mine_text2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>
        <ImageView
            android:id="@+id/img_invateCode_share"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:src="@mipmap/share"
            android:tint="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_51"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/shape_myinnvitationcode_a"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_14"
            android:scaleType="centerCrop"
            android:src="@drawable/mine_header" />

        <TextView
            android:id="@+id/tv_hearderInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@+id/iv_header"
            android:paddingLeft="@dimen/dp_11"
            android:text="三十"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17" />

        <RelativeLayout
            android:id="@+id/rt_invateCode"
            android:layout_width="@dimen/dp_261"
            android:layout_height="@dimen/dp_261"
            android:layout_below="@+id/tv_hearderInfo"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_invateCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_centerInParent="true"
                android:src="@drawable/invatecode" />

            <ImageView
                android:id="@+id/iv_centerherader"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:scaleType="center"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/dp_184"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rt_invateCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_23"
            android:gravity="center"
            android:text="@string/mine_text1"
            android:textColor="@color/color_999" />
    </RelativeLayout>
</LinearLayout>