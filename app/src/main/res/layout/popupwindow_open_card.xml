<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>

    <LinearLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/gift_package_selected"/>
            <ImageView
                android:id="@+id/popup_open_card_close"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:tint="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@mipmap/close"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_15" />
        </RelativeLayout>

        <TextView
            android:id="@+id/popup_open_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_15"
            android:textColor="#000000"
            android:maxWidth="@dimen/dp_240"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/open_card_successed"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_2"/>

        <ImageView
            android:id="@+id/popup_open_card_dragon"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_85"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"/>
        <com.wuxiantao.wxt.ui.custom.button.StateButton
            android:id="@+id/popup_open_card_confirm"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            app:normalTextColor="@color/white"
            app:normalBackgroundStartColor="#FF8777"
            app:normalBackgroundCenterColor="#FF8777"
            app:normalBackgroundEndColor="#FB5654"
            app:normalOrientation="BL_TR"
            app:normalShapeType="LINEAR_GRADIENT"
            android:layout_gravity="center_horizontal"
            app:round="true"
            android:text="@string/confirm"
            android:textSize="@dimen/sp_15"/>

        <RelativeLayout
            android:id="@+id/popup_open_card_double"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/activi_create_keys_selector"
            android:layout_marginTop="@dimen/dp_15"
            android:clickable="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:focusable="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_21"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/limit_gift_play"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/watch_video_double"
                    android:layout_marginStart="@dimen/dp_10" />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/popup_open_card_ads"
            android:layout_width="@dimen/dp_300"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:visibility="gone"
            android:layout_height="@dimen/dp_150"/>
    </LinearLayout>




</RelativeLayout>