<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/all_order_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/base_title_back"
                android:tint="@color/black"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RadioGroup
            android:id="@+id/all_order_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/all_order_commodity"
                style="@style/recording_tab_top"
                android:checked="true"
                android:text="@string/commodity_order"/>
            <RadioButton
                android:id="@+id/all_order_taobao"
                style="@style/recording_tab_top"
                android:text="@string/taobao_order"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>

    <FrameLayout
        android:id="@+id/all_order_frament"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:background="@color/whitesmoke" />

</LinearLayout>