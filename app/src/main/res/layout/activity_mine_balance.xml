<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">
        <ImageView
            android:id="@+id/mine_balance_back"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/base_title_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:tint="@color/black"
            android:layout_marginStart="@dimen/dp_15" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="@string/balance"/>
        <TextView
            android:id="@+id/mine_balance_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="@string/withdraw_recording"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15" />
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mine_balance_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_81"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/dp_39"
                android:src="@mipmap/mine_balance_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:textColor="#6E6565"
                android:text="@string/available_balance"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_28"
                    android:textColor="@color/black"
                    android:text="@string/dao"/>
                <TextView
                    android:id="@+id/mine_balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/black"
                    android:text="@string/zero"/>
            </LinearLayout>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/mine_balance_withdraw_red_bag"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_40"
                app:round="true"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_gravity="center_horizontal"
                app:unableBackgroundStartColor="#FB8E7D"
                app:unableBackgroundCenterColor="#FB8E7D"
                app:unableBackgroundEndColor="#FB8E7D"
                app:unableTextColor="@color/white"
                app:normalBackgroundStartColor="#FB8E7D"
                app:normalBackgroundCenterColor="#FB8E7D"
                app:normalBackgroundEndColor="#FF5655"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                app:normalTextColor="@color/white"
                android:enabled="true"
                android:padding="0dp"
                android:text="@string/withdraw_red_bag"/>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/mine_balance_withdraw_commission"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_40"
                app:round="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center_horizontal"
                app:unableBackgroundStartColor="#FB8E7D"
                app:unableBackgroundCenterColor="#FB8E7D"
                app:unableBackgroundEndColor="#FB8E7D"
                app:unableTextColor="@color/white"
                app:normalBackgroundStartColor="#FB8E7D"
                app:normalBackgroundCenterColor="#FB8E7D"
                android:visibility="gone"
                app:normalBackgroundEndColor="#FF5655"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                app:normalTextColor="@color/white"
                android:enabled="true"
                android:text="@string/withdraw_red_bag"
                android:padding="0dp"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>