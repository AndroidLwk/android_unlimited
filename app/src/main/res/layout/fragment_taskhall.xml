<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.wuxiantao.wxt.ui.title.CNToolbar
                android:id="@+id/fragment_member_center_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cn_titleText="@string/main_tab_income_hall" />

            <LinearLayout
                android:id="@+id/lt_task_finish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_85"
                android:layout_below="@+id/fragment_member_center_toolbar"
                android:background="@drawable/base_title_background"
                android:gravity="center"
                android:orientation="vertical"></LinearLayout>

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_85"
                android:src="@drawable/task_baner" />

            <TextView
                android:id="@+id/tv_friend_active_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_banner"
                android:layout_marginTop="6dp"
                android:paddingLeft="@dimen/dp_16"
                android:text="好友活跃"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:id="@+id/lt_frinent_active_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_friend_active_title"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_box_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_box_open" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_box_b"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_baner_close" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_box_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_baner_close" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_box_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_baner_close" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_box_e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_baner_close" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_friend"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_below="@+id/lt_frinent_active_title"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_16"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/progressbar_bg_divided_dragon" />

            <LinearLayout
                android:id="@+id/lt_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_friend"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_fa5858"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:text="10    "
                    android:textColor="@color/color_fa5858"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:text="30   "
                    android:textColor="@color/color_fa5858"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="right"
                    android:text="50   "
                    android:textColor="@color/color_fa5858"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:gravity="right"
                    android:text="100 "
                    android:textColor="@color/color_fa5858"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="right"
                    android:text="200 "
                    android:textColor="@color/color_fa5858"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lt_task_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_189"
                android:layout_below="@+id/lt_percent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/shape_taskhall_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_13"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_22"
                    android:text="签到任务"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                    android:id="@+id/rv_task_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lt_task_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lt_task_one"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/shape_taskhall_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_22"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="今日任务"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_9"
                        android:visibility="invisible"
                        android:drawableLeft="@drawable/main_taskhall_i"
                        android:drawablePadding="@dimen/dp_7"
                        android:text="刷新"
                        android:textColor="@color/color_6a6a6a"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                    android:id="@+id/rv_task_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>