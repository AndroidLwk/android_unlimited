<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/base_title"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/banding_number_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:text="@string/number"/>
                <EditText
                    android:id="@+id/banding_number_input_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/input_nb"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:inputType="number"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/banding_number_input_clear"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:background="@drawable/clear_all"
                    android:visibility="gone"/>
            </RelativeLayout>
            <View
                android:layout_width="@dimen/dp_340"
                android:layout_height="1px"
                android:layout_gravity="center_horizontal"
                android:background="@color/grey"/>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/banding_number_input_next"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                app:unableBackgroundStartColor="#FB8E7D"
                app:unableBackgroundCenterColor="#FB8E7D"
                app:unableBackgroundEndColor="#FB8E7D"
                app:unableTextColor="@color/white"
                app:normalBackgroundStartColor="#FB8E7D"
                app:normalBackgroundCenterColor="#FB8E7D"
                app:normalBackgroundEndColor="#FF5655"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                app:normalTextColor="@color/white"
                app:round="true"
                android:padding="0dp"
                android:enabled="false"
                android:textSize="@dimen/sp_15"
                android:text="@string/next"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>