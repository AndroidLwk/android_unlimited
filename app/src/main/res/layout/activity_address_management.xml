<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/address_management_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/address_management_back"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/base_title_back"
            android:tint="@color/black"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="@string/address_management"/>
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/address_management_rl"
        android:layout_width="match_parent"
        android:layout_below="@id/address_management_title_layout"
        android:layout_height="match_parent"
        android:background="@color/whitesmoke"
        android:layout_marginBottom="@dimen/dp_50"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/address_management_classic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/black"
            app:srlDrawableArrow="@mipmap/super_man_fly"
            app:srlPrimaryColor="@color/whitesmoke"
            app:layout_srlSpinnerStyle="Scale"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/address_management_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/address_management_add"
        android:layout_width="@dimen/dp_334"
        android:layout_height="@dimen/dp_41"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="0dp"
        android:text="@string/new_create_address"
        app:round="true"
        app:normalTextColor="@color/white"
        app:normalBackgroundStartColor="#FB8E7D"
        app:normalBackgroundCenterColor="#FB8E7D"
        app:normalBackgroundEndColor="#FF5655"
        app:normalOrientation="BL_TR"
        app:normalShapeType="LINEAR_GRADIENT"/>
</RelativeLayout>