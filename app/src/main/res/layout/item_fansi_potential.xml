<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fansi_potential_layout"
    android:clickable="true"
    android:background="@drawable/bg_white_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">

    <ImageView
        android:id="@+id/item_fansi_potential_headimg"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_65">
        <TextView
            android:id="@+id/item_fansi_potential_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="6"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/item_fansi_potential_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="#FE796D"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="13"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/fansi_validity_period"/>
    </LinearLayout>

    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/fansi_potential_activation"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_centerVertical="true"
        app:normalTextColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:normalBackgroundColor="#FF6A44"
        app:round="true"
        android:padding="0dp"
        android:text="@string/activation"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_15" />
</RelativeLayout>