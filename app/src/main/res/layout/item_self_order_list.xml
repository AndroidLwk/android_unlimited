<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="@dimen/dp_340"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_white_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/item_self_order_list_layout">
            <ImageView
                android:id="@+id/item_self_order_list_img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10">
                <com.wuxiantao.wxt.ui.custom.textview.TaoBaoTagTextView
                    android:id="@+id/item_self_order_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:maxEms="20"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/item_self_order_list_money_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/item_self_order_list_money_dao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/red"
                            android:visibility="gone"
                            android:text="@string/dao"/>
                        <TextView
                            android:id="@+id/item_self_order_list_deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/red"/>
                        <TextView
                            android:id="@+id/item_self_order_list_money_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:text="@string/day"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/grey"
                            android:text="@string/order_money"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/grey"
                            android:text="@string/dao"/>
                        <TextView
                            android:id="@+id/item_self_order_list_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/grey"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/item_self_order_list_pay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:visibility="gone">
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/item_self_order_list_pay"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:padding="0dp"
                android:text="@string/go_to_pay"
                android:textSize="@dimen/sp_10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                app:normalTextColor="@color/white"
                app:normalBackgroundStartColor="#FF8E7C"
                app:normalBackgroundCenterColor="#FF5D5B"
                app:normalBackgroundEndColor="#FF5D5B"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                app:round="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>