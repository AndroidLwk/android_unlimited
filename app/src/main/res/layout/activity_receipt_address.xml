<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/receipt_address_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_12"
                android:src="@mipmap/base_title_back"
                android:layout_centerInParent="true"
                android:tint="@color/grey"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/receipt_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:text="@string/add_address"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

   <com.wuxiantao.wxt.ui.custom.scrollview.ReboundScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:overScrollMode="never">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/bg_white_selector">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_50"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp_17"
                       android:textColor="@color/black"
                       android:layout_gravity="center_vertical"
                       android:text="@string/receiver"/>
                   <EditText
                       android:id="@+id/edit_address_person"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:textSize="@dimen/sp_17"
                       android:background="@null"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="@dimen/dp_15"
                       android:textCursorDrawable="@drawable/text_cursor"
                       android:hint="@string/input_receiver"/>
               </LinearLayout>
               <View
                   android:layout_width="@dimen/dp_340"
                   android:layout_height="1px"
                   android:background="@color/grey"
                   android:layout_gravity="center_horizontal"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_50"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp_17"
                       android:textColor="@color/black"
                       android:layout_gravity="center_vertical"
                       android:text="@string/number"/>
                   <EditText
                       android:id="@+id/edit_address_number"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:textSize="@dimen/sp_17"
                       android:background="@null"
                       android:inputType="number"
                       android:textCursorDrawable="@drawable/text_cursor"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="@dimen/dp_15"
                       android:hint="@string/input_your_number"/>
               </LinearLayout>
               <View
                   android:layout_width="@dimen/dp_340"
                   android:layout_height="1px"
                   android:background="@color/grey"
                   android:layout_gravity="center_horizontal"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_50"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp_17"
                       android:textColor="@color/black"
                       android:layout_gravity="center_vertical"
                       android:text="@string/choose_area"/>
                   <TextView
                       android:id="@+id/edit_address_city_select"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:textSize="@dimen/sp_17"
                       android:background="@null"
                       android:textCursorDrawable="@drawable/text_cursor"
                       android:gravity="center_vertical"
                       android:layout_marginLeft="@dimen/dp_15"
                       android:hint="@string/province_city_district"/>
               </LinearLayout>
               <View
                   android:layout_width="@dimen/dp_340"
                   android:layout_height="1px"
                   android:background="@color/grey"
                   android:layout_gravity="center_horizontal"/>
               <EditText
                   android:id="@+id/edit_address_detail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_17"
                   android:background="@null"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginBottom="@dimen/dp_20"
                   android:layout_marginTop="@dimen/dp_10"
                   android:textCursorDrawable="@drawable/text_cursor"
                   android:layout_gravity="center_vertical"
                   android:lines="3"
                   android:gravity="left"
                   android:paddingLeft="@dimen/dp_5"
                   android:hint="@string/input_detailed_address"/>
           </LinearLayout>
           <com.wuxiantao.wxt.ui.custom.button.StateButton
               android:id="@+id/edit_address_save"
               android:layout_width="@dimen/dp_320"
               android:layout_height="@dimen/dp_40"
               android:layout_marginBottom="@dimen/dp_15"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/dp_15"
               android:padding="0dp"
               app:normalTextColor="@color/black"
               app:normalBackgroundStartColor="#E6A750"
               app:normalBackgroundCenterColor="#E6A750"
               app:normalBackgroundEndColor="#E6C58A"
               app:normalOrientation="BL_TR"
               app:normalShapeType="LINEAR_GRADIENT"
               app:round="true"
               android:text="@string/save"/>
       </LinearLayout>
   </com.wuxiantao.wxt.ui.custom.scrollview.ReboundScrollView>
</LinearLayout>