<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/base_title" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/dividend_detail_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/dividend_detail_classic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/black"
            app:srlPrimaryColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly"
            app:layout_srlSpinnerStyle="Scale"/>
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:elevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:layout_scrollFlags="scroll">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dp_15">
                        <ImageView
                            android:layout_width="@dimen/dp_7"
                            android:layout_height="@dimen/dp_19"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/blue_line"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="#2892FF"
                            android:text="@string/advertising_revenue"
                            android:layout_marginStart="@dimen/dp_5" />
                        <ImageView
                            android:id="@+id/dividend_detail_prompt1"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:src="@mipmap/description_icon"
                            android:layout_marginStart="@dimen/dp_3" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/dividend_detail_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#A6A6A6"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_alignParentEnd="true"
                        android:maxLines="1"
                        android:maxWidth="@dimen/dp_130"
                        android:ellipsize="end"
                        android:layout_marginEnd="@dimen/dp_15" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_330"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginTop="@dimen/dp_5"
                    app:layout_scrollFlags="scroll"
                    android:layout_gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/yesterday_earnings_bg"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/dividend_detail_yesterday_earnings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/sp_32"
                                android:layout_gravity="center_horizontal"
                                android:maxWidth="@dimen/dp_120"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/zero"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/sp_14"
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/yesterday_earnings"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_10">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/historical_income"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/dividend_detail_historical_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/sp_32"
                                android:maxWidth="@dimen/dp_120"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/zero"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/sp_14"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_2"
                                android:text="@string/historical_income"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll"
                    android:layout_marginTop="@dimen/dp_20">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dp_15">
                        <ImageView
                            android:layout_width="@dimen/dp_7"
                            android:layout_height="@dimen/dp_19"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/pink_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="#FF5E9C"
                            android:text="@string/permanent_dividend"
                            android:layout_marginStart="@dimen/dp_5" />
                        <ImageView
                            android:id="@+id/dividend_detail_prompt2"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:src="@mipmap/description_icon"
                            android:layout_marginStart="@dimen/dp_3" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/dividend_detail_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#A6A6A6"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_alignParentEnd="true"
                        android:maxLines="1"
                        android:maxWidth="@dimen/dp_130"
                        android:ellipsize="end"
                        android:layout_marginEnd="@dimen/dp_15" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_330"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/divided_dragon_bg"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/dividend_detail_yesterday_earnings_yuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/sp_32"
                            android:textColor="#FFFFFF"
                            android:maxWidth="@dimen/dp_220"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="@string/zero"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#FFFFFF"
                            android:text="@string/yesterday_earnings_yuan"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/dividend_detail_total_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_24"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:maxWidth="@dimen/dp_100"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:text="@string/zero"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/total_number_of_networks"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/dividend_detail_output_today"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_24"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:maxWidth="@dimen/dp_100"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:text="@string/zero"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/output_today"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/dividend_detail_waiting_for_output"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_24"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:maxWidth="@dimen/dp_100"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:text="@string/zero"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/waiting_for_output"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#000000"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/date"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#000000"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/nickname"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#000000"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/obtain_model"/>
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dividend_detail_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:overScrollMode="never"/>
        </android.support.design.widget.CoordinatorLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>