<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/recording_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/base_title_back"
                    android:tint="@color/black"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RadioGroup
                android:id="@+id/recording_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/recording_duration"
                    style="@style/recording_tab_top"
                    android:checked="true"
                    android:text="@string/recording_duration"/>
                <RadioButton
                    android:id="@+id/recording_upper_limit"
                    style="@style/recording_tab_top"
                    android:text="@string/recording_upper_limit"/>
            </RadioGroup>
        </LinearLayout>
        <com.wuxiantao.wxt.ui.custom.viewpager.LazyViewPager
            android:id="@+id/recording_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
    </LinearLayout>

</LinearLayout>