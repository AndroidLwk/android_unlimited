<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wuxiantao.wxt.ui.title.CNToolbar
        android:id="@+id/cntoolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:cn_leftImage="@mipmap/base_title_back"
        app:cn_titleText="@string/pointtocard_text9" />

    <com.wuxiantao.wxt.ui.custom.indicator.VPindicator
        android:id="@+id/indicator_scrapcard_heroscroll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_16"
        app:indicatorHeight="@dimen/dp_2"
        app:sameLine="false" />

    <com.wuxiantao.wxt.ui.custom.viewpager.NoSlidingLazyViewPager
        android:id="@+id/viewpager_scrapcard_heroscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>