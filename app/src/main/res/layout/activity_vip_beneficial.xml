<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/base_title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/vip_beneficial_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/vip_beneficial_classic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly"
            app:layout_srlSpinnerStyle="Scale"/>
        <ScrollView
            android:id="@+id/vip_beneficial_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/base_title_background"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <RelativeLayout
                        android:id="@+id/vip_beneficial_doing_rule"
                        android:layout_width="@dimen/dp_65"
                        android:layout_height="@dimen/dp_22"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:clickable="true"
                        android:background="@drawable/activi_rule_selector"
                        android:focusable="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"
                            android:text="@string/activi_rule"/>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <View
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_3"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/yuan_solid_white_dot"/>
                    <View
                        android:layout_width="@dimen/dp_59"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/line_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/white"
                        android:text="@string/invite_good_friend"/>
                    <View
                        android:layout_width="@dimen/dp_59"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/line_white"
                        android:layout_marginStart="@dimen/dp_5" />
                    <View
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_3"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/yuan_solid_white_dot"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_34"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:text="@string/free_vip"/>
                <com.wuxiantao.wxt.ui.custom.button.StateButton
                    android:layout_width="@dimen/dp_270"
                    android:layout_height="@dimen/dp_30"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    app:round="true"
                    android:enabled="false"
                    app:unableTextColor="@color/white"
                    android:text="@string/vip_16888"
                    app:unableStrokeWidth="1px"
                    android:textSize="@dimen/sp_13"
                    app:unableStrokeColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/task_success"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/_30_vip"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">
                    <LinearLayout
                        android:layout_width="@dimen/dp_342"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_60"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/youxuan_lable_bg"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_90"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_15"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:layout_marginTop="@dimen/dp_50"
                                android:text="@string/participate"/>
                            <com.wuxiantao.wxt.ui.custom.button.StateButton
                                android:id="@+id/vip_beneficial_join_activity"
                                android:layout_width="@dimen/dp_219"
                                android:layout_height="@dimen/dp_55"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_10"
                                android:padding="0dp"
                                app:normalTextColor="@color/black"
                                app:normalBackgroundColor="#FFE8BE"
                                app:round="true"
                                android:textSize="@dimen/sp_25"/>
                            <com.wuxiantao.wxt.ui.custom.button.StateButton
                                android:layout_width="@dimen/dp_257"
                                android:layout_height="@dimen/dp_34"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_20"
                                android:padding="0dp"
                                android:enabled="false"
                                app:unableTextColor="#FFE6B8"
                                app:unableBackgroundColor="#292726"
                                app:round="true"
                                android:textSize="@dimen/sp_17"
                                android:text="@string/s_vip"/>
                            <ImageView
                                android:layout_width="@dimen/dp_244"
                                android:layout_height="@dimen/dp_20"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_25"
                                android:src="@mipmap/vip_beneficial_small_icon"/>
                            <TextView
                                android:id="@+id/vip_beneficial_understanding_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginBottom="@dimen/dp_20"
                                android:textColor="@color/white"
                                android:text="@string/liaojie_more_beneficial"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="@dimen/dp_308"
                        android:layout_height="@dimen/dp_181"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/vip_beneficial_card"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/rule_introduction"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/_1_30"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/_2_30_30_vip"
                    android:layout_marginStart="@dimen/dp_15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/_3_30_30_vip_vip_30_vip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/_4_vip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/_5_vip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/_6_vip"/>
            </LinearLayout>
        </ScrollView>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>