<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_fansi_directly_layout"
    android:background="@drawable/bg_white_selector"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_fansi_directly_headimg"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/item_fansi_directly_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:maxLines="1"
            android:maxEms="6"
            android:ellipsize="end"
            android:textColor="@color/black"/>
        <com.wuxiantao.wxt.ui.custom.button.StateButton
            android:id="@+id/item_fansi_directly_vip_type"
            android:layout_width="@dimen/dp_87"
            android:layout_height="@dimen/dp_17"
            android:drawableLeft="@mipmap/hat_normal_member"
            android:drawableTint="#A7A4A4"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            app:round="true"
            app:unableTextColor="@color/grey"
            app:unableBackgroundColor="@color/white"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="0dp"
            android:textSize="@dimen/sp_10"
            android:text="@string/ordinary_member"
            app:unableStrokeColor="@color/grey"
            app:unableStrokeWidth="@dimen/dp_1"
            android:enabled="false"
            android:drawableStart="@mipmap/hat_normal_member" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/item_fansi_directly_fnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/grey"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="8"
            android:text="@string/fansi_count"/>
        <TextView
            android:id="@+id/item_fansi_directly_rebate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/grey"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="8"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/tribute_count"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_13"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:src="@mipmap/base_title_back"
        android:tint="#ADADAD"
        android:rotation="180"/>
</RelativeLayout>