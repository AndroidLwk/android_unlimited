<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wuxiantao.wxt.ui.title.CNToolbar
        android:id="@+id/cntoolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cn_leftImage="@mipmap/base_title_back"
        app:cn_titleText="@string/pointtocard_text8" />

    <RadioGroup
        android:id="@+id/rg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_hero_card"
            android:layout_width="@dimen/dp_77"
            android:layout_height="@dimen/dp_23"
            android:background="@drawable/selector_mybackpack_button"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="英雄碎片"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />

        <RadioButton
            android:id="@+id/rb_pifu_card"
            android:layout_width="@dimen/dp_77"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/selector_mybackpack_button"
            android:button="@null"
            android:gravity="center"
            android:text="皮肤卡"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />

        <RadioButton
            android:id="@+id/rb_crash_card"
            android:layout_width="@dimen/dp_77"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/selector_mybackpack_button"
            android:button="@null"
            android:gravity="center"
            android:text="现金卡"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_myBackpack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>