<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/base_title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/participate_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/participate_classics_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/black"
            app:srlDrawableArrow="@mipmap/super_man_fly"
            app:layout_srlSpinnerStyle="Scale"/>
        <ScrollView
            android:id="@+id/participate_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/base_title_background"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">
                        <RelativeLayout
                            android:id="@+id/participate_doing_rule"
                            android:layout_width="@dimen/dp_65"
                            android:layout_height="@dimen/dp_22"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:clickable="true"
                            android:background="@drawable/activi_rule_selector"
                            android:focusable="true"
                            android:layout_alignParentEnd="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/white"
                                android:layout_centerInParent="true"
                                android:text="@string/activi_rule"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_50"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <View
                            android:layout_width="@dimen/dp_3"
                            android:layout_height="@dimen/dp_3"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/yuan_solid_white_dot"/>
                        <View
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/line_white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_30"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="@color/white"
                            android:text="@string/invite_fans"
                            android:layout_marginStart="@dimen/dp_5" />
                        <View
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/line_white"
                            android:layout_marginStart="@dimen/dp_5" />
                        <View
                            android:layout_width="@dimen/dp_3"
                            android:layout_height="@dimen/dp_3"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/yuan_solid_white_dot"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_36"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text="@string/free_vip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/_30_30_30_vip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/_30_get"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <View
                        android:layout_width="@dimen/dp_73"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/line_gree"/>
                    <View
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_3"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/yuan_stork_gree_dot"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="#000000"
                        android:text="@string/current_task"
                        android:layout_marginStart="@dimen/dp_5" />
                    <View
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_3"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/yuan_stork_gree_dot"
                        android:layout_marginStart="@dimen/dp_5" />
                    <View
                        android:layout_width="@dimen/dp_73"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/line_gree"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/participate_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/participate_time"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_15">
                    <TextView
                        android:id="@+id/participate_invited_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        android:text="@string/good_friend"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_15">
                        <TextView
                            android:id="@+id/participate_invited_count_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:text="@string/_zero"
                            android:textColor="@color/red"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/black"
                            android:text="@string/separation"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/black"
                            android:text="@string/_60"/>
                    </LinearLayout>
                </RelativeLayout>
                <ProgressBar
                    android:id="@+id/participate_progress_bar"
                    android:layout_width="@dimen/dp_331"
                    android:layout_height="@dimen/dp_16"
                    android:max="60"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_gravity="center_horizontal"
                    android:progressDrawable="@drawable/bg_interest_rate_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/participate_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:overScrollMode="never"/>
                <com.wuxiantao.wxt.ui.custom.button.StateButton
                    android:id="@+id/participate_invite_friend"
                    android:layout_width="@dimen/dp_320"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_30"
                    android:padding="0dp"
                    app:normalTextColor="@color/black"
                    app:normalBackgroundColor="#FFDC99"
                    app:round="true"
                    android:text="@string/invited_friend"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/rule_introduction"
                        android:layout_marginStart="@dimen/dp_15" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/_1_30"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/_2_30_30_vip_"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/_3_30"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/_4_30_vip"
                        android:layout_marginStart="@dimen/dp_15" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/_5_vip_p"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>