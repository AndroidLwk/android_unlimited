<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/merchandise_details_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseParallaxMultiplier="0.5"
                app:title=""
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <com.youth.banner.Banner
                    android:id="@+id/merchandise_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_400"
                    android:layout_centerHorizontal="true"
                    app:indicator_width="@dimen/dp_8"
                    app:indicator_height="@dimen/dp_8"
                    app:layout_collapseMode="parallax"
                    android:transitionName="merchandiseDetailBannerImg" />
                <android.support.v7.widget.Toolbar
                    android:id="@+id/merchandise_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_collapseMode="pin"
                    app:title=""
                    android:paddingTop="@dimen/dp_20"
                    app:navigationIcon="@mipmap/back_icon"
                    app:contentInsetStart="0dp">
                    <TextView
                        android:id="@+id/merchandise_toolbar_tv"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="?attr/actionBarSize"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dp_90"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/dp_90" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
            <RelativeLayout
                android:id="@+id/merchandise_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_selector">
                <RelativeLayout
                    android:id="@+id/merchandise_current_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_20"
                            android:textColor="@color/red"
                            android:text="@string/dao"/>
                        <TextView
                            android:id="@+id/merchandise_current_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_30"
                            android:textColor="@color/red"
                            android:text="@string/zero"
                            android:layout_marginLeft="@dimen/dp_1"
                            android:layout_marginStart="@dimen/dp_1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/red"
                            android:text="@string/after_the_voucher"
                            android:layout_marginLeft="@dimen/dp_3"/>
                        <TextView
                            android:id="@+id/merchandise_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="@string/commodity_price"
                            android:textColor="#B8B8B8"
                            android:layout_marginStart="@dimen/dp_10" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/merchandise_monthly_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="#B8B8B8"
                        android:text="@string/month_volume"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_3" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/merchandise_details_commodity_reward_layout"
                    android:layout_width="@dimen/dp_351"
                    android:layout_height="@dimen/dp_34"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_below="@id/merchandise_current_price_layout"
                    android:background="@mipmap/commodity_reward">
                    <TextView
                        android:id="@+id/merchandise_details_prize_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#FBD37E"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:text="@string/gold_rex"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/dp_80"
                        android:layout_marginStart="@dimen/dp_40" />
                    <TextView
                        android:id="@+id/merchandise_details_prize_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#2D2D2D"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="@string/member_can"
                        android:layout_marginStart="@dimen/dp_6" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>
        <com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView
            android:id="@+id/merchandise_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.wuxiantao.wxt.ui.custom.textview.TaoBaoTagTextView
                    android:id="@+id/merchandise_title"
                    android:layout_width="@dimen/dp_340"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_17" />
                <LinearLayout
                    android:id="@+id/merchandise_details_coupon_layout"
                    android:layout_width="@dimen/dp_345"
                    android:layout_height="@dimen/dp_55"
                    android:orientation="vertical"
                    android:background="@mipmap/taobao_coupon"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:id="@+id/merchandise_details_coupon_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/dp_15" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/white"
                            android:text="@string/period_of_use"/>
                        <TextView
                            android:id="@+id/merchandise_details_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                    android:id="@+id/merchandise_img_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:overScrollMode="never"/>
                <RelativeLayout
                    android:id="@+id/merchandise_save_buy_hide"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginBottom="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_30"
                    android:clickable="true"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:background="@drawable/save_money_bg_selector"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_20"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="@string/save_money_buy"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_2"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_10"
                                android:textColor="@color/white"
                                android:text="@string/get"/>
                            <TextView
                                android:id="@+id/merchandise_save_money2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_10"
                                android:textColor="@color/white"
                                android:text="@string/zero"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_10"
                                android:textColor="@color/white"
                                android:text="@string/yuan"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_10"
                                android:textColor="@color/white"
                                android:text="@string/commission"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <ImageView
        android:id="@+id/merchandise_topping"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:src="@mipmap/topping"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10" />
    <RelativeLayout
        android:id="@+id/merchandise_save_buy"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/save_money_bg_selector"
        android:focusable="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="@string/save_money_buy"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_2"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:text="@string/get"/>
                <TextView
                    android:id="@+id/merchandise_save_money1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:text="@string/zero"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:text="@string/gold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>