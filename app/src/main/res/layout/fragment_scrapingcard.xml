<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/deposit_super_man_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#FC8778"
        app:srlPrimaryColor="#FC8778">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/deposit_super_man_classic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_srlSpinnerStyle="Scale"
            app:srlAccentColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly_white" />

        <com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_openCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_scrapcard_banner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tv_mypack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/main_scrapcard_pack"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:text="@string/taskhall_text4"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_my_heroscroll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/main_scrapcard_hero"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"

                        android:text="@string/pointtocard_text9"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_help"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/main_scrapcard_order"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:text="@string/pointtocard_text21"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_dating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/main_scrapcard_dating"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:text="@string/taskhall_text2"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_7"
                    android:background="@color/color_faf6f5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:drawableLeft="@drawable/main_scrapcard_line"
                    android:drawablePadding="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/taskhall_text9"
                    android:textColor="@color/color_3a3a3a"
                    android:textSize="@dimen/sp_15" />

                <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                    android:id="@+id/nrv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_7"
                    android:background="@color/color_faf6f5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:drawableLeft="@drawable/main_scrapcard_line"
                    android:drawablePadding="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/taskhall_text16"
                    android:textColor="@color/color_3a3a3a"
                    android:textSize="@dimen/sp_15" />


                <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                    android:id="@+id/rv_scrapingcard_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_69"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_7"
                    android:background="@color/color_faf6f5" />

                <LinearLayout
                    android:id="@+id/lt_scardget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginBottom="@dimen/dp_23"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_14">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/main_scrapcard_line"
                            android:drawablePadding="@dimen/dp_2"
                            android:text="@string/taskhall_text18"
                            android:textColor="@color/color_3a3a3a"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/taskhall_text19"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                        android:id="@+id/rv_scrapingcard_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>
        </com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</android.support.design.widget.CoordinatorLayout>