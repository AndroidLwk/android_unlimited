<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:id="@+id/item_super_man_vip_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_vip_sub_department_head_img"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"/>
    <TextView
        android:id="@+id/item_vip_sub_department_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:maxEms="6"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_60"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_vip_sub_department_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:text="@string/department_original_price"
                android:maxLines="1"
                android:maxEms="8"
                android:ellipsize="end"
                android:textColor="#E8CEB6"/>
            <TextView
                android:id="@+id/item_vip_sub_department_present_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:text="@string/department_original_price"
                android:maxEms="8"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#FFEECC"/>
        </LinearLayout>
        <com.wuxiantao.wxt.ui.custom.button.StateButton
            android:id="@+id/item_vip_sub_department_present_sheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_17"
            android:minWidth="@dimen/dp_41"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:enabled="false"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            app:unableBackgroundColor="#E8CEB6"
            app:unableTextColor="#FB5755"
            android:textSize="@dimen/sp_12"
            android:maxLines="1"
            android:maxEms="8"
            android:ellipsize="end"
            android:text="@string/save_money_regx"
            app:radius="@dimen/dp_3"/>
    </LinearLayout>
</RelativeLayout>