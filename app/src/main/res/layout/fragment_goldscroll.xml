<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                android:id="@+id/recylerview_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginRight="@dimen/dp_27" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerview_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recylerview_one"
                android:layout_marginTop="@dimen/dp_18" />
        </RelativeLayout>
    </ScrollView>
    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/sbt_hecheng"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_12"
        android:padding="0dp"
        android:text="@string/pointtocard_text10"
        android:textSize="@dimen/sp_16"
        app:normalBackgroundCenterColor="#FD6F57"
        app:normalBackgroundEndColor="#FA5858"
        app:normalBackgroundStartColor="#FD6F57"
        app:normalOrientation="BL_TR"
        app:normalShapeType="LINEAR_GRADIENT"
        app:normalTextColor="@color/white"
        app:round="true"
        app:unableBackgroundCenterColor="#FD6F57"
        app:unableBackgroundEndColor="#FD6F57"
        app:unableBackgroundStartColor="#FD6F57"
        app:unableTextColor="@color/white" />
</RelativeLayout>