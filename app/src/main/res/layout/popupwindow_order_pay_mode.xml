<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_288"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_background"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <ImageView
                android:id="@+id/popup_order_pay_mode_close"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:tint="@color/black"
                android:src="@mipmap/close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:text="@string/order_pay"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/popup_order_pay_mode_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
        <com.wuxiantao.wxt.ui.custom.button.StateButton
            android:id="@+id/popup_order_pay_mode_confirm"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_15"
            android:padding="0dp"
            app:normalTextColor="@color/white"
            app:normalBackgroundStartColor="#FF8E7C"
            app:normalBackgroundCenterColor="#FF5D5B"
            app:normalBackgroundEndColor="#FF5D5B"
            app:normalOrientation="BL_TR"
            app:normalShapeType="LINEAR_GRADIENT"
            android:textSize="@dimen/sp_15"
            app:round="true"
            android:text="@string/self_operated_pay" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>
</RelativeLayout>