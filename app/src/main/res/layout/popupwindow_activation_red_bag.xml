<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>

    <RelativeLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/popup_activation_red_bag_layout"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_white_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_22"
                    android:textColor="#4C4C4C"
                    android:layout_centerHorizontal="true"
                    android:text="@string/zero"/>
                <ImageView
                    android:id="@+id/popup_activation_red_bag_close"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:tint="@color/black"
                    android:src="@mipmap/close"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/dp_15" />
                <TextView
                    android:id="@+id/popup_activation_red_bag_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#4C4C4C"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:text="@string/time"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10">
                <ImageView
                    android:id="@+id/popup_activation_red_bag_img"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/dp_5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#4C4C4C"
                        android:textStyle="bold"
                        android:text="@string/build_time_time"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#4C4C4C"
                        android:text="@string/build_speed_"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/popup_activation_red_bag_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#4C4C4C"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center_horizontal"
                android:text="@string/today_3_regex"/>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/popup_activation_one_build"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center_horizontal"
                android:padding="0dp"
                app:normalTextColor="@color/white"
                app:normalBackgroundStartColor="#FF8E7C"
                app:normalBackgroundCenterColor="#FF5D5B"
                app:normalBackgroundEndColor="#FF5D5B"
                app:normalOrientation="BL_TR"
                app:unableBackgroundStartColor="#FF8E7C"
                app:unableBackgroundCenterColor="#FF8E7C"
                app:unableBackgroundEndColor="#FF8E7C"
                app:unableTextColor="@color/white"
                app:normalShapeType="LINEAR_GRADIENT"
                app:round="true"
                android:enabled="false"
                android:textSize="@dimen/sp_15"
                android:text="@string/zero" />
            <RelativeLayout
                android:id="@+id/popup_activation_two_build"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/activi_create_keys_selector"
                android:layout_marginTop="@dimen/dp_15"
                android:clickable="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/limit_gift_play"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/zero"
                        android:layout_marginStart="@dimen/dp_10" />
                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/popup_activation_red_bag_ads"
                android:layout_width="@dimen/dp_300"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:layout_height="@dimen/dp_150"/>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_90"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dp_25"
            android:visibility="gone"
            android:src="@mipmap/activation_red_bag_icom"/>
    </RelativeLayout>




</RelativeLayout>