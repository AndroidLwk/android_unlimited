<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/base_title_background"
        >

        <ImageView
            android:id="@+id/mine_balancewithdraw_back"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_50"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_35"
            android:src="@mipmap/base_title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:paddingTop="@dimen/dp_15"

            android:layout_centerInParent="true"
            android:text="@string/mine_text3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <com.wuxiantao.wxt.ui.custom.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_faf6f5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_14"
                    android:background="@drawable/shape_myinnvitationcode_a"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_13"
                    android:paddingBottom="@dimen/dp_10">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_withdrawalamount_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/withdraw_money"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_toRightOf="@+id/tv_withdrawalamount_title"
                            android:text="@string/three_day_arrival"
                            android:textColor="@color/color_898989"
                            android:textSize="@dimen/sp_10" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dao"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_24" />

                            <EditText
                                android:id="@+id/balance_with_draw_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:background="@null"
                                android:hint="@string/input_withdraw_money"
                                android:inputType="numberDecimal"
                                android:textColor="@color/color_010101"
                                android:textCursorDrawable="@drawable/text_cursor"
                                android:textSize="@dimen/sp_22" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/balance_with_draw_clear"
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="@drawable/clear_all"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_23"
                        android:paddingRight="@dimen/dp_11">

                        <TextView
                            android:id="@+id/tv_balance_one_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/able_withdraw_money"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/balance_with_draw_able_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_balance_one_title"
                            android:textColor="@color/color_fc6a57"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/balance_with_draw_able_money"
                            android:text="@string/yuan"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />

                        <com.wuxiantao.wxt.ui.custom.textview.BorderTextView
                            android:id="@+id/balance_with_draw_all_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="@string/all_withdraw"
                            android:textColor="#FC6A57"
                            android:textSize="@dimen/sp_12"
                            app:layout_borderBottom="true"
                            app:layout_borderLeft="false"
                            app:layout_borderRight="false"
                            app:layout_borderTop="false"
                            app:layout_borders="false" />
                    </RelativeLayout>
                </LinearLayout>

                <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                    android:id="@+id/balance_with_draw_money_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:overScrollMode="never" />
            </LinearLayout>


            <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                android:id="@+id/balance_with_draw_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_marginRight="@dimen/dp_14" />

            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/balance_with_draw_btn"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:enabled="false"
                android:padding="0dp"
                android:text="@string/confirm_withdraw"
                app:normalBackgroundCenterColor="#FB8E7D"
                app:normalBackgroundEndColor="#FF5655"
                app:normalBackgroundStartColor="#FB8E7D"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                app:normalTextColor="@color/white"
                app:round="true"
                app:unableBackgroundCenterColor="#FB8E7D"
                app:unableBackgroundEndColor="#FB8E7D"
                app:unableBackgroundStartColor="#FB8E7D"
                app:unableTextColor="@color/white" />
        </LinearLayout>
    </com.wuxiantao.wxt.ui.custom.scrollview.ReboundScrollView>


</LinearLayout>