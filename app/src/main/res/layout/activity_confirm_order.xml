<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/confirm_order_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/confirm_order_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_12"
                android:layout_centerInParent="true"
                android:tint="@color/black"
                android:src="@mipmap/base_title_back"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_19"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="@string/confirm_order"/>

        <TextView
            android:id="@+id/confirm_order_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="@string/remark"/>
    </RelativeLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/commodity_info_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/confirm_order_title_layout"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly_white"
            app:layout_srlSpinnerStyle="Scale"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/confirm_order_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                app:layout_scrollFlags="scroll"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">
                    <TextView
                        android:id="@+id/confirm_order_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_centerVertical="true"
                        android:text="@string/person_"
                        android:layout_marginLeft="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/confirm_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/confirm_order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/s_address"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/address_lin"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/confirm_order_set_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/bg_white_selector"
                android:clickable="true"
                android:visibility="visible"
                app:layout_scrollFlags="scroll"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_17"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_address"/>
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/base_title_back"
                    android:tint="@color/grey"
                    android:rotation="180"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_scrollFlags="scroll"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/dp_10">
                        <ImageView
                            android:id="@+id/confirm_order_img"
                            android:layout_width="@dimen/dp_100"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/dp_100"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/dp_10">
                            <TextView
                                android:id="@+id/confirm_order_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_17"
                                android:text="@string/w_weichat_regex"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:maxEms="16"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/confirm_order_spce"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_15"
                                android:layout_marginTop="@dimen/dp_3"
                                android:layout_below="@id/confirm_order_title"
                                android:text="@string/w_weichat_regex"
                                android:maxLines="2"
                                android:maxWidth="@dimen/dp_200"
                                android:ellipsize="end"
                                android:textColor="@color/grey"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:orientation="horizontal"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/dp_10">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_15"
                                        android:textColor="@color/grey"
                                        android:text="@string/dao"/>
                                    <TextView
                                        android:id="@+id/confirm_order_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_15"
                                        android:text="@string/zero"
                                        android:textColor="@color/grey"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/grey"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="@color/black"
                            android:text="@string/total_price_of_goods"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/red"
                                android:text="@string/dao"/>
                            <TextView
                                android:id="@+id/confirm_order_price_red"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_19"
                                android:text="@string/zero"
                                android:textColor="@color/red"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:text="@string/pay_type"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/confirm_order_pay_rv"
                android:layout_width="@dimen/dp_340"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:overScrollMode="never"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:text="@string/payment_required"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/red"
                android:text="@string/dao"/>
            <TextView
                android:id="@+id/confirm_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_19"
                android:text="@string/zero"
                android:textColor="@color/red"/>
        </LinearLayout>
        <Button
            android:id="@+id/confirm_order_commit"
            android:layout_width="@dimen/dp_126"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_buy_selector"
            android:enabled="true"
            android:text="@string/commit_order"/>
    </RelativeLayout>
</RelativeLayout>