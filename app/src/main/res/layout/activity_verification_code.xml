<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/verification_code_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                layout="@layout/base_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/grey"
                android:text="@string/send_sms"/>
            <TextView
                android:id="@+id/ver_code_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_24"
                android:textColor="#000000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/grey"
                    android:text="@string/input_ver_code"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:id="@+id/ver_code_count_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:id="@+id/ver_code_count_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/grey"
                        android:text="@string/s"/>
                </LinearLayout>
            </RelativeLayout>
            <com.wuxiantao.wxt.ui.custom.layout.VerCodeBorderLayout
                android:id="@+id/ver_code_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_5"
                app:vc_maxNum="6"
                app:vc_box_width="@dimen/dp_50"
                app:vc_box_height="@dimen/dp_50"
                app:vc_box_padding="@dimen/dp_8"
                app:vc_normalBackground="@drawable/bg_ver_code_normal"
                app:vc_pressedBackground="@drawable/bg_ver_code_pressed"
                app:vc_normalTextColor="@color/black"
                app:vc_pressedTextColor="@color/white"/>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>