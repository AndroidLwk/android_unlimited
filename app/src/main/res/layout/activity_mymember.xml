<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rt_personInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_142"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/mymember_b"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_12">

                <ImageView
                    android:id="@+id/iv_mine_header"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_58"
                    android:layout_below="@+id/tv_title"
                    android:src="@drawable/mine_header" />

                <TextView
                    android:id="@+id/iv_headerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toRightOf="@+id/iv_mine_header"
                    android:text="小猫咪"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_headerName"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@+id/iv_mine_header"
                    android:text="我的师傅：小狐狸"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_27"
                    android:text="@string/mymember_text1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <Button
                    android:id="@+id/bt_openMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_21"
                    android:background="@drawable/mymember_j"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="@string/mymember_text2"
                    android:textColor="@color/color_eb4a48" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_76"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_17"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_member_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mymember_text3"
                    android:textColor="@color/color_fa5758"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_2"
                    android:layout_below="@+id/tv_member_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@color/color_eb4a48" />

            </RelativeLayout>

            <com.wuxiantao.wxt.ui.custom.recyclerview.NestRecyclerView
                android:id="@+id/rv_equity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/mymember_text4"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_21"
                android:text="@string/mymember_text5"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>