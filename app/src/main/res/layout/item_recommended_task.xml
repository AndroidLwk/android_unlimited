<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:id="@+id/item_recommended_task_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_recommended_task_icon"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_15">
            <TextView
                android:id="@+id/item_recommended_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/item_recommended_task_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B7B7B7"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
    </LinearLayout>
    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/item_recommended_task_btn"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_26"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        app:unableBackgroundStartColor="#FB8E7D"
        app:unableBackgroundCenterColor="#FB8E7D"
        app:unableBackgroundEndColor="#FB8E7D"
        app:unableTextColor="@color/white"
        app:normalBackgroundStartColor="#FB8E7D"
        app:normalBackgroundCenterColor="#FB8E7D"
        app:normalBackgroundEndColor="#FF5655"
        app:normalOrientation="BL_TR"
        app:normalShapeType="LINEAR_GRADIENT"
        app:normalTextColor="@color/white"
        app:round="true"
        android:layout_gravity="center_horizontal"
        android:text="@string/check_in_not"
        android:textSize="@dimen/sp_12"
        android:padding="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_15" />
</RelativeLayout>