<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/commodity_info_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/commodity_info_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/commodity_info_ctl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:title=""
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    android:orientation="vertical">
                    <com.youth.banner.Banner
                        android:id="@+id/commodity_info_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_400"
                        app:layout_scrollFlags="scroll"
                        android:layout_gravity="center_horizontal"
                        app:indicator_width="@dimen/dp_8"
                        app:indicator_height="@dimen/dp_8"
                        android:background="@color/whitesmoke"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:layout_scrollFlags="scroll"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginStart="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_20"
                                android:textColor="@color/red"
                                android:text="@string/dao"/>
                            <TextView
                                android:id="@+id/commodity_info_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_32"
                                android:text="@string/zero"
                                android:textColor="@color/red"/>
                            <LinearLayout
                                android:id="@+id/commodity_info_return_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_gravity="center_vertical"
                                android:visibility="visible"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/dp_10">
                                <TextView
                                    android:id="@+id/commodity_info_return_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/red"
                                    android:text="@string/buy_m_order"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/commodity_info_reward_layout"
                            android:layout_width="@dimen/dp_351"
                            android:layout_height="@dimen/dp_34"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:visibility="visible"
                            android:background="@mipmap/commodity_reward">
                            <TextView
                                android:id="@+id/commodity_info_prize_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_15"
                                android:textColor="#FBD37E"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/dp_3"
                                android:layout_marginLeft="@dimen/dp_40"
                                android:text="@string/gold_rex"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:maxWidth="@dimen/dp_80"
                                android:layout_marginStart="@dimen/dp_40" />
                            <TextView
                                android:id="@+id/commodity_info_prize_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="#2D2D2D"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:layout_marginTop="@dimen/dp_2"
                                android:text="@string/member_can"
                                android:layout_marginStart="@dimen/dp_6" />
                        </LinearLayout>
                        <com.wuxiantao.wxt.ui.custom.textview.TaoBaoTagTextView
                            android:id="@+id/commodity_info_title"
                            android:layout_width="@dimen/dp_340"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10" />
                        <TextView
                            android:id="@+id/commodity_info_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/dp_10" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#CFCFCF"
                            android:layout_marginTop="@dimen/dp_20"/>
                    </LinearLayout>
                </LinearLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/commodity_info_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_collapseMode="pin"
                    app:title=""
                    android:paddingTop="@dimen/dp_20"
                    app:navigationIcon="@mipmap/back_icon"
                    app:contentInsetStart="0dp">
                    <TextView
                        android:id="@+id/commodity_info_toolbar_tv"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="?attr/actionBarSize"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dp_80"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/dp_80" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                app:layout_scrollFlags="scroll"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/service"
                    android:layout_marginStart="@dimen/dp_10" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ok"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/grey"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="@string/authentic_guarantee"/>

                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ok"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/grey"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="@string/limited_time_"/>
                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ok"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/grey"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="@string/no_worries_after_sale"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/commodity_info_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"
                android:background="@drawable/bg_white_selector"
                android:clickable="true"
                android:minHeight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/selected"/>
                <TextView
                    android:id="@+id/commodity_info_spec_tv"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/grey"/>
                <TextView
                    android:id="@+id/commodity_info_spec_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:text="@string/please_commmodity_spce"
                    android:textColor="@color/grey"/>
                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/base_title_back"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:visibility="visible"
                    android:tint="@color/grey"/>
            </RelativeLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/commodity_info_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/selector_list_item"
                app:tabIndicatorColor="#D9363C"
                app:tabSelectedTextColor="#D9363C"
                app:tabTextColor="#A7A7A7" />
        </android.support.design.widget.AppBarLayout>

        <com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView
            android:id="@+id/commodity_info_sl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginBottom="@dimen/dp_50"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v4.view.ViewPager
                android:id="@+id/commodity_info_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />
        </com.wuxiantao.wxt.ui.custom.scrollview.CustomScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <Button
        android:id="@+id/commodity_info_buy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        android:text="@string/buy__"
        android:background="@drawable/bg_buy_selector"/>

</RelativeLayout>