<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />

    <LinearLayout
        android:layout_width="@dimen/dp_272"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_background"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/gift_package_selected" />

            <ImageView
                android:id="@+id/popup_open_card_close"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/scrapcard_popwindow_c"
                android:tint="@color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/popup_open_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxWidth="@dimen/dp_240"
            android:maxLines="2"
            android:text="@string/pointtocard_text4"
            android:textColor="@color/color_fe481e"
            android:textSize="29sp" />

        <TextView
            android:id="@+id/tv_openCard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:text="@string/pointtocard_text5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/popup_open_card_dragon"
            android:layout_width="@dimen/dp_94"
            android:layout_height="@dimen/dp_94"
            android:layout_marginTop="@dimen/dp_12"
            android:scaleType="centerCrop"
            android:src="@drawable/scrap_card" />

        <LinearLayout
            android:id="@+id/lt_shuangbei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_isSeeAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/select_checkbox_scrapcard_success_pop"
                android:checked="true"
                android:text="  是否双倍"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="@string/pointtocard_text6"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <com.wuxiantao.wxt.ui.custom.button.StateButton
            android:id="@+id/popup_open_card_confirm"
            android:layout_width="@dimen/dp_184"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_17"
            android:text="@string/pointtocard_text7"
            android:textSize="@dimen/sp_15"
            app:normalBackgroundCenterColor="#FD6F57"
            app:normalBackgroundEndColor="#FA5758"
            app:normalBackgroundStartColor="#FD6F57"
            app:normalOrientation="BL_TR"
            app:normalShapeType="LINEAR_GRADIENT"
            app:normalTextColor="@color/white"
            app:round="true" />

        <FrameLayout
            android:id="@+id/popup_open_card_ads"
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_111"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_12"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            />
    </LinearLayout>

</RelativeLayout>