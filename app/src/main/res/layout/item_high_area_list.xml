<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_white_background"
    android:id="@+id/item_high_area_list_layout">
    <RelativeLayout
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_130"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15">
        <ImageView
            android:id="@+id/item_high_area_list_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_15">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/youxuan_lable_icon"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5">
        <com.wuxiantao.wxt.ui.custom.textview.BuyZeroTagTextView
            android:id="@+id/item_high_area_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxEms="20"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@id/item_high_area_list_title"
            android:background="@drawable/bg_juxing_red_border">
            <TextView
                android:id="@+id/item_high_area_list_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:padding="@dimen/dp_3"
                android:text="@string/first_order_regex"
                android:textColor="#FC4D43"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_high_area_list_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/gray"
                        android:visibility="gone"
                        android:text="@string/original_price"/>
                    <TextView
                        android:id="@+id/item_high_area_list_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/gray"
                        android:text="@string/zero"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/item_high_area_list_peoples"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#FC4D43"
                    android:layout_marginTop="@dimen/dp_5"
                    android:maxLines="1"
                    android:maxEms="8"
                    android:ellipsize="end"
                    android:text="@string/already_regx"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/item_high_area_list_buy"
                android:layout_width="@dimen/dp_78"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>