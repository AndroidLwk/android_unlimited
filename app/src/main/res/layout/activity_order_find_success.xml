<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whitesmoke">

    <include
        layout="@layout/base_title"/>

    <com.wuxiantao.wxt.ui.custom.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/order_find_success_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_80"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    android:text="@string/find_order_success"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/grey"
                    android:text="@string/super_find_order_success"
                    android:layout_marginTop="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_343"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/order_find_success_layout"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/bg_white_background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_84"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/dp_10">
                    <com.wuxiantao.wxt.ui.custom.textview.TaoBaoTagTextView
                        android:id="@+id/order_find_success_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:maxEms="30"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:text="@string/will_get_red_pg"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/red"
                            android:text="@string/dao"/>
                        <TextView
                            android:id="@+id/order_find_success_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/red"
                            android:text="@string/zero"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.wuxiantao.wxt.ui.custom.scrollview.ReboundScrollView>

    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/order_find_success_confirm"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        app:normalTextColor="@color/white"
        app:normalBackgroundColor="#FB5654"
        app:round="true"
        android:text="@string/confirm"/>
</RelativeLayout>