<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/base_title_background"
        android:paddingTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_70">
        <RelativeLayout
            android:id="@+id/mine_fansi_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_13"
                android:layout_centerInParent="true"
                android:background="@mipmap/base_title_back" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/mine_fansi_title_img"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/mine_fansi_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_fans"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_3"
                android:textSize="@dimen/sp_18"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxEms="6"
                android:layout_marginStart="@dimen/dp_3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/mine_fansi_title_btn"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="0dp"
                android:text="@string/invite_fans"
                android:textSize="@dimen/sp_8"
                app:normalBackgroundColor="#FFFFFF"
                app:normalTextColor="#FB5A57"
                app:radius="@dimen/dp_5"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/dp_10" />
            <ImageView
                android:id="@+id/mine_fansi_doubt"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/mine_fansi_doubt"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/mine_fansi_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:background="@drawable/base_title_background">
            <RelativeLayout
                android:id="@+id/mine_fansi_head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_15">
                    <ImageView
                        android:id="@+id/mine_fansi_headimg"
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_42" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_fansi_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:maxEms="10"
                            android:textSize="@dimen/sp_15" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mine_fansi_view_invite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/view_invite_my"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_11" />

                            <ImageView
                                android:layout_width="@dimen/dp_5"
                                android:layout_height="@dimen/dp_8"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:background="@mipmap/base_title_back"
                                android:rotation="180" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <com.wuxiantao.wxt.ui.custom.button.StateButton
                    android:id="@+id/mine_fansi_invite"
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="@dimen/dp_29"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:padding="0dp"
                    android:text="@string/invite_fans"
                    android:textSize="@dimen/sp_13"
                    app:normalBackgroundColor="#FFFFFF"
                    app:normalTextColor="#FB5A57"
                    app:round="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_10" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_fansi_head_layout"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_scrollFlags="scroll"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_3"
                            android:layout_height="@dimen/dp_11"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="@string/total_fans"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_11" />

                        <ImageView
                            android:id="@+id/mine_fansi_qa"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:background="@mipmap/mine_fansi_doubt" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mine_fansi_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/_zero"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_23" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="@dimen/dp_3"
                            android:layout_height="@dimen/dp_11"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="@string/total_jinggong_deposit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/mine_fansi_total_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/_zero"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_23" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_top_rectangle">
                <com.wuxiantao.wxt.ui.custom.indicator.VPindicator
                    android:id="@+id/mine_fansi_indicator"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    app:sameLine="false"
                    app:indicatorHeight="@dimen/dp_2"
                    android:layout_height="@dimen/dp_40"/>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <com.wuxiantao.wxt.ui.custom.viewpager.LazyViewPager
            android:id="@+id/mine_fansi_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:overScrollMode="never"/>
    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>