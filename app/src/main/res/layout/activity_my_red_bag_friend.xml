<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/my_red_bag_friend_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/my_red_bag_friend_classic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_srlSpinnerStyle="Scale"
            app:srlAccentColor="@color/white"
            app:srlDrawableArrow="@mipmap/super_man_fly_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="parallax">
                        <ImageView
                            android:id="@+id/my_red_bag_friend_head_icon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_234"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/red_bag_img" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/my_red_bag_friend_promotion_language"
                                    android:layout_width="@dimen/dp_57"
                                    android:layout_height="@dimen/dp_16"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/promotion_language_img" />

                                <ImageView
                                    android:id="@+id/my_red_bag_friend_promotion_poster"
                                    android:layout_width="@dimen/dp_71"
                                    android:layout_height="@dimen/dp_16"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/promotion_poster_img" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/dp_334"
                                android:layout_height="@dimen/dp_43"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_20">
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/work_friend"
                                        android:textColor="#A2A2A2"
                                        android:textSize="@dimen/sp_12" />
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/rest_friend"
                                        android:textColor="#A2A2A2"
                                        android:textSize="@dimen/sp_12" />
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/friend_contribution"
                                        android:textColor="#A2A2A2"
                                        android:textSize="@dimen/sp_12" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">
                            <ImageView
                                android:id="@+id/my_red_bag_friend_back"
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="@dimen/dp_12"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_35"
                                android:src="@mipmap/base_title_back" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/my_red_bag_friend"
                                android:paddingTop="@dimen/dp_20"
                                android:layout_marginBottom="@dimen/dp_20"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_17" />

                            <TextView
                                android:id="@+id/my_red_bag_friend_leaderboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_35"
                                android:layout_marginRight="@dimen/dp_15"
                                android:text="@string/invitation_leaderboard"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_15" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_360"
                        android:layout_height="@dimen/dp_43"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_bottom_rectangle">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/my_red_bag_friend_work_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:ellipsize="end"
                                android:maxEms="4"
                                android:maxLines="1"
                                android:text="@string/people_regex"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_18" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/my_red_bag_friend_rest_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:ellipsize="end"
                                android:maxEms="4"
                                android:maxLines="1"
                                android:text="@string/people_regex"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_18" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/my_red_bag_friend_contribution_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:ellipsize="end"
                                android:maxEms="4"
                                android:maxLines="1"
                                android:text="@string/yuan_regex"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_18" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.design.widget.AppBarLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_red_bag_friend_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:overScrollMode="never"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </android.support.design.widget.CoordinatorLayout>
        </LinearLayout>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <com.wuxiantao.wxt.ui.custom.button.StateButton
        android:id="@+id/my_red_bag_friend_invite"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="0dp"
        android:text="@string/friend_invite"
        android:textSize="@dimen/sp_15"
        android:visibility="visible"
        app:normalBackgroundCenterColor="#FF5D5B"
        app:normalBackgroundEndColor="#FF5D5B"
        app:normalBackgroundStartColor="#FF8E7C"
        app:normalOrientation="BL_TR"
        app:normalShapeType="LINEAR_GRADIENT"
        app:normalTextColor="@color/white"
        app:round="true" />

</RelativeLayout>