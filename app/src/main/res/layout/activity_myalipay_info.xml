<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke">

    <include
        layout="@layout/base_title"/>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/myalipay_info_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10">
            <ImageView
                android:id="@+id/myalipay_info_head_icon"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_57"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/alipay"/>
            <LinearLayout
                android:layout_width="@dimen/dp_331"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/myalipay_info_head_icon"
                android:background="@drawable/bg_white_background"
                android:layout_marginTop="@dimen/dp_60"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        android:text="@string/alipay_nick_name"/>
                    <TextView
                        android:id="@+id/myalipay_info_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/grey"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EAEAEA"
                    android:layout_gravity="center_horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        android:text="@string/payee_name"/>
                    <TextView
                        android:id="@+id/myalipay_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_15"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:textColor="@color/grey"/>
                </RelativeLayout>
            </LinearLayout>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/myalipay_info_change"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_40"
                android:padding="0dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_15"
                app:round="true"
                app:normalTextColor="@color/white"
                app:normalOrientation="BL_TR"
                app:normalBackgroundStartColor="#FF8E7C"
                app:normalBackgroundCenterColor="#FF5D5B"
                app:normalBackgroundEndColor="#FF5D5B"
                app:normalShapeType="LINEAR_GRADIENT"
                android:textSize="@dimen/sp_15"
                android:text="@string/change_alipay"/>
        </RelativeLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>