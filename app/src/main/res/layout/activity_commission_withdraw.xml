<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/base_title"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/commission_withdraw_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/black"
            app:srlDrawableArrow="@mipmap/super_man_fly"
            app:srlPrimaryColor="@color/white"
            app:layout_srlSpinnerStyle="Scale"/>
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp"
                android:background="@color/white"
                android:fitsSystemWindows="true">
                <RelativeLayout
                    android:layout_width="@dimen/dp_347"
                    android:layout_height="@dimen/dp_159"
                    android:layout_gravity="center_horizontal"
                    app:layout_scrollFlags="scroll"
                    android:fitsSystemWindows="true"
                    android:background="@mipmap/commission_withdraw_bg">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="@string/can_withdraw"/>
                        <TextView
                            android:id="@+id/commission_withdraw_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_30"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="@string/zero"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/total_account_entry"/>
                            <TextView
                                android:id="@+id/commission_withdraw_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/zero"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_13"
                                    android:textColor="@color/black"
                                    android:text="@string/will_account_entry"/>
                                <ImageView
                                    android:id="@+id/commission_withdraw_doubt"
                                    android:layout_width="@dimen/dp_13"
                                    android:layout_height="@dimen/dp_13"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:tint="@color/black"
                                    android:src="@mipmap/mine_fansi_doubt"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/commission_withdraw_process_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="@string/zero"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_scrollFlags="scroll"
                    android:fitsSystemWindows="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10">
                    <View
                        style="@style/red_line_style"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="@string/withdrawal_method"/>
                </LinearLayout>
                <RadioGroup
                    android:id="@+id/commission_withdraw_type_rg"
                    android:layout_width="@dimen/dp_345"
                    android:layout_height="@dimen/dp_53"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_gravity="center_horizontal">
                    <RadioButton
                        android:id="@+id/commission_withdraw_wechat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:background="@drawable/withdraw_wechat_selector"/>
                    <RadioButton
                        android:id="@+id/commission_withdraw_alipay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/withdraw_alipay_selector"/>
                </RadioGroup>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_12">
                    <TextView
                        android:id="@+id/commission_withdraw_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#8C8C8C"
                        android:layout_centerVertical="true"/>
                    <com.wuxiantao.wxt.ui.custom.button.StateButton
                        android:id="@+id/commission_withdraw_binding"
                        android:layout_width="@dimen/dp_54"
                        android:layout_height="@dimen/dp_26"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="0dp"
                        android:text="@string/bingding"
                        app:normalBackgroundColor="@color/white"
                        app:normalTextColor="#8C8C8C"
                        android:visibility="gone"
                        app:normalStrokeWidth="@dimen/dp_1"
                        app:normalStrokeColor="#8C8C8C"
                        app:round="true"/>
                </RelativeLayout>
            </android.support.design.widget.AppBarLayout>
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="horizontal">
                        <View
                            style="@style/red_line_style"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="@string/fast_withdraw"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fast_withdraw_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:overScrollMode="never"/>
                    <LinearLayout
                        android:id="@+id/commission_withdraw_description_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <View
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_17"
                            android:layout_marginLeft="@dimen/dp_60"
                            android:background="@drawable/triangle_up_withdraw"
                            android:layout_marginStart="@dimen/dp_60" />
                        <RelativeLayout
                            android:layout_width="@dimen/dp_350"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/withdraw_description_shape">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/dp_10">
                                <TextView
                                    android:id="@+id/commission_withdraw_description_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_13"
                                    android:text="@string/yuan_description"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/gray"
                                        android:text="@string/continuous_check_in"/>
                                    <TextView
                                        android:id="@+id/commission_withdraw_description_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/red"
                                        android:text="@string/_zero"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/gray"
                                        android:text="@string/get_one_time"/>
                                    <TextView
                                        android:id="@+id/commission_withdraw_description_qualifications_money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/gray"
                                        android:text="@string/_zero"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/gray"
                                        android:text="@string/withdraw_qualifications"/>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_11"
                                    android:textColor="@color/gray"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:text="@string/re_acquire_opportunity"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/dp_2">
                                    <TextView
                                        android:id="@+id/commission_withdraw_description_check_in_msg"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/gray"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/gray"
                                        android:visibility="visible"
                                        android:text="@string/checked_in_"/>
                                    <TextView
                                        android:id="@+id/commission_withdraw_description_check_in_day_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/red"
                                        android:visibility="visible"
                                        android:text="@string/_zero"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_11"
                                        android:textColor="@color/gray"
                                        android:visibility="visible"
                                        android:text="@string/day"/>
                                </LinearLayout>
                            </LinearLayout>
                            <com.wuxiantao.wxt.ui.custom.button.StateButton
                                android:id="@+id/commission_withdraw_description_check_in"
                                android:layout_width="@dimen/dp_73"
                                android:layout_height="@dimen/dp_33"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:padding="0dp"
                                android:text="@string/check_in_not"
                                android:textSize="@dimen/sp_12"
                                app:round="true"
                                app:normalTextColor="@color/white"
                                app:normalBackgroundColor="#FF5654"
                                app:unableBackgroundColor="#EED5D2"
                                app:unableTextColor="@color/gray"
                                app:unableStrokeColor="@color/gray"
                                app:unableStrokeWidth="@dimen/dp_1"
                                android:enabled="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/dp_10" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10">
                        <View
                            style="@style/red_line_style"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="@string/common_withdraw"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/common_withdraw_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10">
                        <View
                            android:layout_width="@dimen/dp_3"
                            android:layout_height="@dimen/dp_14"
                            android:layout_gravity="center_vertical"
                            android:background="#FFBB00"/>
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_21"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:src="@mipmap/member_img"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:textColor="#FFBB00"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="@string/member_withdraw"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="@string/withdraw_money"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:focusable="true"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_24"
                                android:textColor="@color/black"
                                android:text="@string/dao"/>
                            <EditText
                                android:id="@+id/commission_withdraw_input"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textCursorDrawable="@drawable/text_cursor"
                                android:background="@null"
                                android:textSize="@dimen/sp_22"
                                android:inputType="numberDecimal"
                                android:hint="@string/input_withdraw_money"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/commission_withdraw_input_clear"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:visibility="gone"
                            android:background="@drawable/clear_all"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="#B7B7B7"
                            android:text="@string/able_withdraw_money"/>
                        <TextView
                            android:id="@+id/commission_withdraw_able_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="#B7B7B7"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="#B7B7B7"
                            android:text="@string/yuan"/>
                        <com.wuxiantao.wxt.ui.custom.textview.BorderTextView
                            android:id="@+id/commission_withdraw_all_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="#777FD1"
                            app:layout_borders="false"
                            app:layout_borderLeft="false"
                            app:layout_borderRight="false"
                            app:layout_borderTop="false"
                            app:layout_borderBottom="true"
                            android:text="@string/all_withdraw"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:textColor="#B7B7B7"
                            android:text="@string/min_withdraw_money"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:textColor="#B7B7B7"
                            android:text="@string/_1_0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:textColor="#B7B7B7"
                            android:text="@string/yuan"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10">
                        <View
                            style="@style/red_line_style"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_17"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="@string/withdraw_description"/>
                    </LinearLayout>
                    <TextView
                        style="@style/withdraw_description_tv"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/withdraw_description1"/>
                    <TextView
                        style="@style/withdraw_description_tv"
                        android:text="@string/withdraw_description2"/>
                    <TextView
                        style="@style/withdraw_description_tv"
                        android:text="@string/withdraw_description3"/>
                    <TextView
                        style="@style/withdraw_description_tv"
                        android:text="@string/withdraw_description4"/>
                    <com.wuxiantao.wxt.ui.custom.button.StateButton
                        android:id="@+id/commission_withdraw_btn"
                        android:layout_width="@dimen/dp_320"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:padding="0dp"
                        android:text="@string/withdraw"
                        app:round="true"
                        app:unableBackgroundStartColor="#FB8E7D"
                        app:unableBackgroundCenterColor="#FB8E7D"
                        app:unableBackgroundEndColor="#FB8E7D"
                        app:unableTextColor="@color/white"
                        app:normalBackgroundStartColor="#FB8E7D"
                        app:normalBackgroundCenterColor="#FB8E7D"
                        app:normalBackgroundEndColor="#FF5655"
                        app:normalOrientation="BL_TR"
                        app:normalShapeType="LINEAR_GRADIENT"
                        android:textSize="@dimen/sp_15"
                        app:normalTextColor="@color/white"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>




</LinearLayout>