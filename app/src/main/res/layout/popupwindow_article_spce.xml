<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:layout_marginTop="@dimen/dp_50"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25">
                <ImageView
                    android:id="@+id/popup_article_spce_close"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@mipmap/close"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_15" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_150"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp_150">
                <TextView
                    android:id="@+id/popup_article_spce_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:maxLines="1"
                    android:maxEms="14"
                    android:ellipsize="end"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/red"
                        android:text="@string/dao"/>
                    <TextView
                        android:id="@+id/popup_article_spce_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_18"
                        android:text="@string/zero"
                        android:textColor="@color/red"/>
                    <TextView
                        android:id="@+id/popup_article_spce_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/grey"
                        android:maxEms="8"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/stock"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/grey"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/popup_article_spce_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/quantity"
                android:layout_marginStart="@dimen/dp_15" />
            <com.donkingliang.labels.LabelsView
                android:id="@+id/popup_article_count_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                app:labelBackground="@drawable/spce_lable_bg_selector"
                app:labelTextColor="@drawable/spce_lable_text_selector"
                app:labelTextPaddingBottom="@dimen/dp_5"
                app:labelTextPaddingLeft="@dimen/dp_10"
                app:labelTextPaddingRight="@dimen/dp_10"
                app:labelTextPaddingTop="@dimen/dp_5"
                app:lineMargin="@dimen/dp_8"
                app:wordMargin="@dimen/dp_8"
                app:selectType="SINGLE_IRREVOCABLY"
                android:layout_marginStart="@dimen/dp_15" />
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/popup_article_spce_buy"
                android:layout_width="@dimen/dp_351"
                android:layout_height="@dimen/dp_41"
                android:layout_gravity="center_horizontal"
                android:padding="0dp"
                app:normalTextColor="@color/black"
                app:normalBackgroundStartColor="#E6A751"
                app:normalBackgroundCenterColor="#E6C68A"
                app:normalBackgroundEndColor="#E6C68A"
                app:normalOrientation="BL_TR"
                app:normalShapeType="LINEAR_GRADIENT"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                app:round="true"
                android:text="@string/buy__"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/popup_article_spce_img"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_marginLeft="@dimen/dp_15" />

    </RelativeLayout>

</RelativeLayout>