<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>
    <ImageView
        android:id="@+id/popup_share_poster_close"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:tint="@color/white"
        android:layout_marginTop="@dimen/dp_65"
        android:layout_marginLeft="@dimen/dp_25"
        android:src="@mipmap/share_poster_close"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:layout_marginBottom="@dimen/dp_10"
       android:orientation="vertical">
       <ImageView
           android:id="@+id/popup_share_poster_img"
           android:layout_width="@dimen/dp_200"
           android:layout_height="@dimen/dp_200"
           android:layout_gravity="center_horizontal"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/sp_12"
           android:layout_marginLeft="@dimen/dp_10"
           android:textColor="@color/white"
           android:gravity="center"
           android:layout_marginTop="@dimen/dp_10"
           android:text="@string/share_desc"/>
       <LinearLayout
           android:id="@+id/popup_share_poster_share_layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal">
           <View
               android:layout_width="@dimen/dp_120"
               android:layout_height="1px"
               android:layout_gravity="center_vertical"
               android:background="#C9C9C9"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_15"
               android:layout_marginLeft="@dimen/dp_10"
               android:textColor="@color/white"
               android:text="@string/share_cha"/>
           <View
               android:layout_width="@dimen/dp_120"
               android:layout_height="1px"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="@dimen/dp_10"
               android:background="#C9C9C9"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/dp_5">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1">
               <ImageView
                   android:id="@+id/popup_share_good_friend"
                   android:layout_width="@dimen/dp_53"
                   android:layout_height="@dimen/dp_53"
                   android:layout_gravity="center_horizontal"
                   android:scaleType="centerCrop"
                   android:src="@mipmap/share_poster_wechat_friend"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_13"
                   android:textColor="@color/white"
                   android:layout_marginTop="@dimen/dp_5"
                   android:layout_gravity="center_horizontal"
                   android:text="@string/wechat_friend"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1">
               <ImageView
                   android:id="@+id/popup_share_wechat_ring"
                   android:layout_width="@dimen/dp_53"
                   android:layout_height="@dimen/dp_53"
                   android:layout_gravity="center_horizontal"
                   android:scaleType="centerCrop"
                   android:src="@mipmap/share_poster_wechat_group"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_13"
                   android:textColor="@color/white"
                   android:layout_marginTop="@dimen/dp_5"
                   android:layout_gravity="center_horizontal"
                   android:text="@string/wechat_group"/>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
</RelativeLayout>