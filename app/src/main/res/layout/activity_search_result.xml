<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_result_dl"
    android:background="@color/white">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/search_result_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:fitsSystemWindows="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:layout_scrollFlags="scroll"
                android:fitsSystemWindows="true">
                <RelativeLayout
                    android:id="@+id/search_result_back"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/base_title_back"
                        android:layout_centerInParent="true"
                        android:tint="@color/gray"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_267"
                    android:layout_height="@dimen/dp_33"
                    android:background="@drawable/base_search_shape"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_16"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@mipmap/main_search_icon"
                        android:layout_marginStart="@dimen/dp_5" />
                    <EditText
                        android:id="@+id/search_result_edt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_centerVertical="true"
                        android:textCursorDrawable="@drawable/text_cursor"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:lines="1"
                        android:hint="@string/input_keyword"
                        android:layout_marginStart="@dimen/dp_25" />
                    <ImageView
                        android:id="@+id/search_result_delete"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:src="@drawable/clear_all"
                        android:tint="@color/gray"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_10" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/search_result_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:textColor="@drawable/title_text_selector"
                    android:clickable="true"
                    android:text="@string/cancel"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:layout_scrollFlags="scroll"
                android:fitsSystemWindows="true"
                android:background="@color/whitesmoke">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15">
                    <ImageView
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_18"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/coupon_price_img"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/only_show_coupon"/>
                </LinearLayout>

                <com.wuxiantao.wxt.ui.custom.switchbutton.SwitchButton
                    android:id="@+id/search_filter_coupon_sb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    app:sb_checked_color="#FF5D5B"
                    app:sb_checked="true"
                    android:visibility="visible"/>
            </RelativeLayout>
            <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioGroup
                android:id="@+id/search_filter_rb"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/dp_45">
                <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioButton
                    android:id="@+id/search_filter_comprehensive_rb"
                    style="@style/search_softRadioButton_style"
                    app:text="@string/search_comprehensive"/>
                <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioButton
                    android:id="@+id/search_filter_volume_rb"
                    style="@style/softRadioButton_style"
                    app:text="@string/search_sales_volume"/>
                <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioButton
                    android:id="@+id/search_filter_coupon_rb"
                    style="@style/softRadioButton_style"
                    app:text="@string/search_coupon_price"/>
                <com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioButton
                    android:id="@+id/search_filter_filter_rb"
                    style="@style/search_softRadioButton_style"
                    app:text="@string/search_filter"
                    app:rightImgCheck="@mipmap/filter_icon"
                    app:rightImgChecked="@mipmap/filter_icon_checked"/>
            </com.wuxiantao.wxt.ui.custom.radiobutton.SoftRadioGroup>
        </android.support.design.widget.AppBarLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/search_result_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:srlAccentColor="#00000000"
            app:srlPrimaryColor="#00000000">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:id="@+id/search_result_classic_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/black"
                app:srlDrawableArrow="@mipmap/super_man_fly"
                app:srlPrimaryColor="@color/white"
                app:layout_srlSpinnerStyle="Scale"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/search_result_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>
                <ImageView
                    android:id="@+id/search_result_topping"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentBottom="true"
                    android:visibility="visible"
                    android:src="@mipmap/topping"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_10" />
            </RelativeLayout>
            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/search_result_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:layout_gravity="right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:text="@string/choose_business"/>

            <RadioGroup
                android:id="@+id/search_result_right_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/search_result_right_tianmao"
                    android:layout_width="@dimen/dp_86"
                    android:layout_height="@dimen/dp_30"
                    android:button="@null"
                    android:text="@string/tianmao"
                    android:textColor="@drawable/rb_text_selector"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/sp_14"
                    android:background="@drawable/rb_selector"/>
                <RadioButton
                    android:id="@+id/search_result_right_unlimited"
                    android:layout_width="@dimen/dp_86"
                    android:layout_height="@dimen/dp_30"
                    android:button="@null"
                    android:text="@string/unlimited"
                    android:textColor="@drawable/rb_text_selector"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/sp_14"
                    android:checked="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@drawable/rb_selector"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_50"
                android:text="@string/price_range"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/search_result_right_input_lowest"
                    android:layout_width="@dimen/dp_109"
                    android:layout_height="@dimen/dp_30"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:hint="@string/lowest_price"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/sp_13"
                    android:background="@drawable/price_input_selector"/>
                <View
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>

                <EditText
                    android:id="@+id/search_result_right_input_highest"
                    android:layout_width="@dimen/dp_109"
                    android:layout_height="@dimen/dp_30"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:hint="@string/highest_price"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/price_input_selector"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/search_result_right_reset"
                android:layout_width="@dimen/dp_111"
                android:layout_height="@dimen/dp_49"
                android:padding="0dp"
                android:text="@string/reset"
                app:round="true"
                app:normalTextColor="#9D9D9D"
                app:normalBackgroundColor="#CFCFCF"
                android:textSize="@dimen/sp_15"/>
            <com.wuxiantao.wxt.ui.custom.button.StateButton
                android:id="@+id/search_result_right_confirm"
                android:layout_width="@dimen/dp_111"
                android:layout_height="@dimen/dp_49"
                android:padding="0dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/confirm"
                app:round="true"
                app:normalTextColor="@color/white"
                app:normalBackgroundColor="#FF5555"
                android:textSize="@dimen/sp_15"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>