<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_346"
        android:layout_centerInParent="true"
        android:background="@mipmap/red_envelope_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/popup_new_user_icon"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"/>
        <TextView
            android:id="@+id/popup_new_user_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_15"
            android:textColor="#3F3F3F"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/new_user_msg"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/popup_new_user_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_48"
                android:textColor="#FB6B2B"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="@dimen/dp_230"
                android:text="@string/new_user_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="#FB6B2B"
                android:text="@string/yuan"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/popup_new_user_receive"
            android:layout_width="@dimen/dp_228"
            android:layout_height="@dimen/dp_43"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_90"
            android:src="@mipmap/click_receive"/>
    </LinearLayout>

</RelativeLayout>