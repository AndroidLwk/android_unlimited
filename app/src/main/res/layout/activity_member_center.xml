<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wuxiantao.wxt.ui.title.CNToolbar
        android:id="@+id/fragment_member_center_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cn_titleText="@string/main_tab_member_center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_member_center_toolbar"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    android:background="@drawable/base_title_background"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/quality_preference_head_img"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginStart="@dimen/dp_15" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_5"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/quality_preference_head_nick_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_15"
                                    android:textColor="@color/white"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:maxEms="8"/>
                                <RelativeLayout
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="@dimen/dp_18"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_3"
                                    android:background="@drawable/bg_quality_member_background"
                                    android:layout_marginStart="@dimen/dp_3">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true">
                                        <ImageView
                                            android:id="@+id/member_center_hat"
                                            android:layout_width="@dimen/dp_12"
                                            android:layout_height="@dimen/dp_8"
                                            android:src="@mipmap/hat_normal_member"
                                            android:layout_gravity="center_vertical"/>
                                        <TextView
                                            android:id="@+id/fragment_quality_preference_member_status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/sp_10"
                                            android:layout_gravity="center_vertical"
                                            android:textColor="@color/black"
                                            android:text="@string/ordinary_member"
                                            android:layout_marginLeft="@dimen/dp_3"
                                            android:layout_marginStart="@dimen/dp_3" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/member_center_end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/white"
                                android:maxLines="1"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/dp_4"
                                android:layout_gravity="center_vertical"
                                android:text="@string/member_center_end_time"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <com.youth.banner.Banner
                    android:id="@+id/fragment_quality_preference__banner"
                    android:layout_width="@dimen/dp_330"
                    android:layout_height="@dimen/dp_120"
                    android:layout_centerHorizontal="true"
                    app:indicator_width="@dimen/dp_8"
                    app:indicator_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_80"/>

                <com.wuxiantao.wxt.ui.custom.button.StateButton
                    android:id="@+id/member_center_open"
                    android:layout_width="@dimen/dp_320"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_20"
                   android:layout_centerHorizontal="true"
                    android:layout_below="@id/fragment_quality_preference__banner"
                    android:padding="0dp"
                    app:normalTextColor="@color/white"
                    app:normalBackgroundStartColor="#FF8E7C"
                    app:normalBackgroundCenterColor="#FF5D5B"
                    app:normalBackgroundEndColor="#FF5D5B"
                    app:normalOrientation="BL_TR"
                    app:normalShapeType="LINEAR_GRADIENT"
                    app:round="true"
                    android:text="@string/member_center_open" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_horizontal"
                android:fitsSystemWindows="true"
                android:layout_marginTop="@dimen/dp_20">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/member_center_line_right"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/vip__"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_5" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/member_center_line_left"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/member_center_menu_img"
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_410"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="@dimen/dp_15"/>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>