<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <!-- 圆角半径 -->
            <corners
                android:topLeftRadius="@dimen/dp_10"
                android:topRightRadius="@dimen/dp_1"
                android:bottomLeftRadius="@dimen/dp_10"
                android:bottomRightRadius="@dimen/dp_1"/>
            <!-- 渐变色 -->
            <gradient
                android:startColor="#218868"
                android:endColor="#20B2AA"
                android:angle="0"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <!-- 圆角半径 -->
            <corners
                android:topLeftRadius="@dimen/dp_10"
                android:topRightRadius="@dimen/dp_1"
                android:bottomLeftRadius="@dimen/dp_10"
                android:bottomRightRadius="@dimen/dp_1"/>
            <!-- 渐变色 -->
            <gradient
                android:startColor="#668B8B"
                android:endColor="#548B54"
                android:angle="0"/>
        </shape>
    </item>
</selector>