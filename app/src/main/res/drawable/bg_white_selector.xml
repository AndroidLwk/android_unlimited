<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_1" />
            <solid android:color="#EAEAEA"/>
            <stroke android:width="@dimen/dp_1" android:color="#EAEAEA"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_1" />
            <solid android:color="@color/white"/>
            <stroke android:width="@dimen/dp_1" android:color="@color/white"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_1" />
            <solid android:color="@color/whitesmoke"/>
            <stroke android:width="@dimen/dp_1" android:color="@color/whitesmoke"/>
        </shape>
    </item>
</selector>